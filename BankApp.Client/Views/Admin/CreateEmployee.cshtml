@using BankApp.Client.ViewModels
@model EmployeeViewModel

@{
    ViewData["Title"] = "Create Employee";
}

<style>
    :root {
        --bank-primary: #1e3a5f;
        --bank-secondary: #2c5f8d;
        --bank-accent: #3498db;
        --bank-success: #27ae60;
        --bank-light: #f8f9fa;
        --bank-border: #e1e8ed;
        --bank-shadow: rgba(30, 58, 95, 0.08);
    }

    .employee-form-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
        padding: 40px 0;
    }

    .form-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 8px 24px var(--bank-shadow);
        border: 1px solid var(--bank-border);
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .form-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 32px rgba(30, 58, 95, 0.12);
        }

    .form-header {
        background: linear-gradient(135deg, var(--bank-primary) 0%, var(--bank-secondary) 100%);
        padding: 32px;
        position: relative;
        overflow: hidden;
    }

        .form-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 200px;
            height: 200px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 50%;
        }

        .form-header h4 {
            margin: 0;
            font-size: 1.75rem;
            font-weight: 600;
            color: white;
            position: relative;
        }

        .form-header i {
            margin-right: 12px;
            font-size: 1.5rem;
            vertical-align: middle;
        }

    .form-body {
        padding: 40px;
    }

    .form-section {
        margin-bottom: 24px;
    }

    .form-label {
        font-weight: 600;
        color: var(--bank-primary);
        margin-bottom: 8px;
        font-size: 0.95rem;
        letter-spacing: 0.3px;
    }

    .form-control {
        border: 2px solid var(--bank-border);
        border-radius: 8px;
        padding: 12px 16px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: var(--bank-accent);
            box-shadow: 0 0 0 4px rgba(52, 152, 219, 0.1);
            outline: none;
        }

        .form-control:hover {
            border-color: var(--bank-secondary);
        }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 4px;
        display: block;
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, var(--bank-primary) 0%, var(--bank-secondary) 100%);
        border: none;
        padding: 14px 32px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(30, 58, 95, 0.2);
    }

        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(30, 58, 95, 0.3);
            background: linear-gradient(135deg, var(--bank-secondary) 0%, var(--bank-primary) 100%);
        }

    .btn-secondary-custom {
        background: white;
        border: 2px solid var(--bank-border);
        color: var(--bank-primary);
        padding: 14px 32px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-secondary-custom:hover {
            background: var(--bank-light);
            border-color: var(--bank-secondary);
            color: var(--bank-secondary);
        }

    .btn-group-actions {
        display: flex;
        gap: 16px;
        margin-top: 32px;
    }

        .btn-group-actions button,
        .btn-group-actions a {
            flex: 1;
        }

    .required-indicator {
        color: #dc3545;
        margin-left: 4px;
    }

    .validation-summary {
        background: #fff3cd;
        border-left: 4px solid #ffc107;
        padding: 16px;
        border-radius: 8px;
        margin-bottom: 24px;
    }

    @@media (max-width: 768px) {
        .form-body

    {
        padding: 24px;
    }

    .form-header {
        padding: 24px;
    }

    .btn-group-actions {
        flex-direction: column;
    }

    }
</style>

<div class="employee-form-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9 col-md-10">
                <div class="form-card">
                    <div class="form-header">
                        <h4><i class="fas fa-user-plus"></i> Create New Employee</h4>
                    </div>
                    <div class="form-body">
                        <form asp-action="CreateEmployee" method="post">
                            <div asp-validation-summary="ModelOnly" class="validation-summary text-danger"></div>
                            <input type="hidden" asp-for="ApplicationUserId" value="123" />

                            <div class="row">
                                <div class="col-md-6 form-section">
                                    <label asp-for="UserName" class="form-label">
                                        Username<span class="required-indicator">*</span>
                                    </label>
                                    <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 form-section">
                                    <label asp-for="FullName" class="form-label">
                                        Full Name<span class="required-indicator">*</span>
                                    </label>
                                    <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 form-section">
                                    <label asp-for="Password" class="form-label">
                                        Password<span class="required-indicator">*</span>
                                    </label>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 form-section">
                                    <label asp-for="StaffCode" class="form-label">
                                        Staff Code<span class="required-indicator">*</span>
                                    </label>
                                    <input asp-for="StaffCode" class="form-control" placeholder="Enter staff code" />
                                    <span asp-validation-for="StaffCode" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 form-section">
                                    <label asp-for="JobTitle" class="form-label">
                                        Job Title<span class="required-indicator">*</span>
                                    </label>
                                    <input asp-for="JobTitle" class="form-control" placeholder="Enter job title" />
                                    <span asp-validation-for="JobTitle" class="text-danger"></span>
                                </div>

                                <div class="col-md-6 form-section">
                                    <label asp-for="DateHired" class="form-label">
                                        Date Hired<span class="required-indicator">*</span>
                                    </label>
                                    <input asp-for="DateHired" type="date" class="form-control" />
                                    <span asp-validation-for="DateHired" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="btn-group-actions">
                                <button type="submit" class="btn btn-primary-custom">
                                    <i class="fas fa-save"></i> Create Employee
                                </button>
                                <a href="@Url.Action("Employees")" class="btn btn-secondary-custom">
                                    <i class="fas fa-arrow-left"></i> Back to Employees
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
