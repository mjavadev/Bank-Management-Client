@model List<BankApp.Client.Dto.EmployeeDto>

@{
    ViewData["Title"] = "Employees";
}

<style>
    :root {
        --bank-primary: #1e3a5f;
        --bank-secondary: #2c5f8d;
        --bank-accent: #3498db;
        --bank-success: #27ae60;
        --bank-edit: #e67e22;
        --bank-danger: #e74c3c;
        --bank-light: #f8f9fa;
        --bank-border: #e1e8ed;
        --bank-shadow: rgba(30, 58, 95, 0.08);
    }

    .employees-container {
        background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
        min-height: 100vh;
        padding: 32px 0;
    }

    .page-header {
        margin-bottom: 32px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 16px;
    }

        .page-header h2 {
            color: var(--bank-primary);
            font-weight: 700;
            font-size: 2rem;
            margin: 0;
            display: flex;
            align-items: center;
        }

            .page-header h2 i {
                margin-right: 12px;
                color: var(--bank-accent);
            }

    .employee-count-badge {
        background: linear-gradient(135deg, var(--bank-accent) 0%, var(--bank-secondary) 100%);
        color: white;
        padding: 6px 16px;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 600;
        margin-left: 12px;
    }

    .btn-add-employee {
        background: linear-gradient(135deg, var(--bank-primary) 0%, var(--bank-secondary) 100%);
        border: none;
        padding: 12px 28px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(30, 58, 95, 0.2);
        color: white;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-add-employee:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(30, 58, 95, 0.3);
            background: linear-gradient(135deg, var(--bank-secondary) 0%, var(--bank-primary) 100%);
            color: white;
            text-decoration: none;
        }

    .employees-card {
        background: white;
        border-radius: 16px;
        border: 1px solid var(--bank-border);
        box-shadow: 0 4px 16px var(--bank-shadow);
        overflow: hidden;
    }

    .employees-card-body {
        padding: 0;
    }

    /* DataTable Styling */
    .table-container {
        padding: 24px;
    }

    #employeesTable {
        width: 100% !important;
        border-collapse: separate;
        border-spacing: 0;
    }

        #employeesTable thead th {
            background: linear-gradient(135deg, var(--bank-primary) 0%, var(--bank-secondary) 100%);
            color: white;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.875rem;
            letter-spacing: 0.5px;
            padding: 16px 12px;
            border: none;
            position: sticky;
            top: 0;
            z-index: 10;
        }

            #employeesTable thead th:first-child {
                border-top-left-radius: 8px;
            }

            #employeesTable thead th:last-child {
                border-top-right-radius: 8px;
            }

        #employeesTable tbody tr {
            transition: all 0.3s ease;
            border-bottom: 1px solid var(--bank-border);
        }

            #employeesTable tbody tr:hover {
                background: linear-gradient(90deg, rgba(52, 152, 219, 0.05) 0%, rgba(30, 58, 95, 0.03) 100%);
                transform: scale(1.01);
                box-shadow: 0 2px 8px rgba(30, 58, 95, 0.08);
            }

        #employeesTable tbody td {
            padding: 16px 12px;
            vertical-align: middle;
            color: var(--bank-primary);
            font-size: 0.95rem;
        }

        #employeesTable tbody tr:last-child {
            border-bottom: none;
        }

        /* Column-specific styling */
        #employeesTable td:first-child {
            font-weight: 600;
            color: var(--bank-accent);
        }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 8px;
        justify-content: flex-start;
    }

    .btn-action {
        width: 36px;
        height: 36px;
        border-radius: 8px;
        border: none;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        cursor: pointer;
        font-size: 0.875rem;
    }

    .btn-edit {
        background: linear-gradient(135deg, rgba(230, 126, 34, 0.15) 0%, rgba(230, 126, 34, 0.25) 100%);
        color: var(--bank-edit);
    }

        .btn-edit:hover {
            background: linear-gradient(135deg, var(--bank-edit) 0%, #d35400 100%);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(230, 126, 34, 0.3);
        }

    .btn-delete {
        background: linear-gradient(135deg, rgba(231, 76, 60, 0.15) 0%, rgba(231, 76, 60, 0.25) 100%);
        color: var(--bank-danger);
    }

        .btn-delete:hover {
            background: linear-gradient(135deg, var(--bank-danger) 0%, #c0392b 100%);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(231, 76, 60, 0.3);
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 32px;
    }

    .empty-state-icon {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, var(--bank-light) 0%, #e9ecef 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 24px;
    }

        .empty-state-icon i {
            font-size: 3rem;
            color: var(--bank-accent);
        }

    .empty-state h4 {
        color: var(--bank-primary);
        font-weight: 600;
        margin-bottom: 12px;
    }

    .empty-state p {
        color: #6c757d;
        font-size: 1rem;
        margin-bottom: 24px;
    }

    /* DataTables Custom Styling */
    .dataTables_wrapper .dataTables_length select,
    .dataTables_wrapper .dataTables_filter input {
        border: 2px solid var(--bank-border);
        border-radius: 8px;
        padding: 8px 12px;
        transition: all 0.3s ease;
    }

        .dataTables_wrapper .dataTables_length select:focus,
        .dataTables_wrapper .dataTables_filter input:focus {
            border-color: var(--bank-accent);
            outline: none;
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
        }

    .dataTables_wrapper .dataTables_paginate .paginate_button {
        border-radius: 8px;
        padding: 8px 16px;
        margin: 0 4px;
        border: 2px solid var(--bank-border);
        background: white;
        color: var(--bank-primary);
        transition: all 0.3s ease;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: linear-gradient(135deg, var(--bank-primary) 0%, var(--bank-secondary) 100%);
            color: white !important;
            border-color: var(--bank-primary);
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            background: linear-gradient(135deg, var(--bank-primary) 0%, var(--bank-secondary) 100%);
            color: white !important;
            border-color: var(--bank-primary);
        }

    .dataTables_wrapper .dataTables_info {
        color: #6c757d;
        font-size: 0.9rem;
        padding: 12px 0;
    }

    .dataTables_wrapper .dataTables_length,
    .dataTables_wrapper .dataTables_filter {
        padding: 12px 0;
    }

    /* Status Badge for Date */
    .date-badge {
        display: inline-block;
        padding: 4px 12px;
        background: rgba(52, 152, 219, 0.1);
        border-radius: 6px;
        font-size: 0.875rem;
        color: var(--bank-primary);
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-header h2

    {
        font-size: 1.5rem;
    }

    .table-container {
        padding: 16px;
    }

    .btn-add-employee {
        width: 100%;
        justify-content: center;
    }

    }
</style>

<div class="employees-container">
    <div class="container-fluid">
        <div class="page-header">
            <h2>
                <i class="fas fa-users-cog"></i> All Employees
                @if (Model.Any())
                {
                    <span class="employee-count-badge">@Model.Count</span>
                }
            </h2>
            <a href="@Url.Action("CreateEmployee")" class="btn-add-employee">
                <i class="fas fa-plus"></i> Add Employee
            </a>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="employees-card">
                    <div class="employees-card-body">
                        @if (Model.Any())
                        {
                            <div class="table-container">
                                <div class="table-responsive">
                                    <table class="table" id="employeesTable">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Username</th>
                                                <th>Full Name</th>
                                                <th>Staff Code</th>
                                                <th>Job Title</th>
                                                <th>Date Hired</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var emp in Model)
                                            {
                                                <tr>
                                                    <td>@emp.EmployeeID</td>
                                                    <td>@emp.UserName</td>
                                                    <td>@emp.FullName</td>
                                                    <td>@emp.StaffCode</td>
                                                    <td>@emp.JobTitle</td>
                                                    <td>
                                                        <span class="date-badge">
                                                            <i class="far fa-calendar-alt"></i>
                                                            @emp.DateHired.ToString("dd MMM yyyy")
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <div class="action-buttons">
                                                            <a href="@Url.Action("EditEmployee", new { id = emp.EmployeeID })"
                                                               class="btn-action btn-edit"
                                                               title="Edit Employee">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                            <button class="btn-action btn-delete"
                                                                    onclick="deleteEmployee(@emp.EmployeeID)"
                                                                    title="Delete Employee">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <div class="empty-state-icon">
                                    <i class="fas fa-users-slash"></i>
                                </div>
                                <h4>No Employees Found</h4>
                                <p>Get started by adding your first employee to the system.</p>
                                <a href="@Url.Action("CreateEmployee")" class="btn-add-employee">
                                    <i class="fas fa-plus"></i> Add First Employee
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#employeesTable').DataTable({
                "pageLength": 25,
                "order": [[0, "desc"]],
                "language": {
                    "search": "Search employees:",
                    "lengthMenu": "Show _MENU_ employees per page",
                    "info": "Showing _START_ to _END_ of _TOTAL_ employees",
                    "infoEmpty": "No employees available",
                    "infoFiltered": "(filtered from _MAX_ total employees)",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Prev"
                    }
                },
                "responsive": true,
                "dom": '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>rtip'
            });
        });

        function deleteEmployee(id) {
            // Custom confirmation dialog using SweetAlert2 or similar can be added here
            if(confirm('Are you sure you want to delete this employee? This action cannot be undone.')) {
                $.ajax({
                    url: '@Url.Action("DeleteEmployee")/' + id,
                    type: 'POST',
                    success: function(response) {
                        if(response.success) {
                            toastr.success(response.message || 'Employee deleted successfully');
                            setTimeout(function() {
                                location.reload();
                            }, 1500);
                        } else {
                            toastr.error(response.message || 'Failed to delete employee');
                        }
                    },
                    error: function() {
                        toastr.error('An error occurred while deleting the employee');
                    }
                });
            }
        }
    </script>
}
