@using BankApp.Client.ViewModels
@model ApplicationViewModel

@{
    ViewData["Title"] = "Apply for Bank Account";
    Layout = "_Layout";
}

<style>
    :root {
        --bank-primary: #1e3a5f;
        --bank-secondary: #2c5f8d;
        --bank-accent: #3498db;
        --bank-success: #27ae60;
        --bank-success-dark: #229954;
        --bank-light: #f8f9fa;
        --bank-border: #e1e8ed;
        --bank-shadow: rgba(30, 58, 95, 0.08);
    }

    .application-container {
        background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
        padding: 15px 0;
    }

    .application-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 16px var(--bank-shadow);
        border: 1px solid var(--bank-border);
        overflow: hidden;
    }

    .application-header {
        background: linear-gradient(135deg, var(--bank-success) 0%, var(--bank-success-dark) 100%);
        padding: 16px 24px;
        position: relative;
        overflow: hidden;
    }

        .application-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 150px;
            height: 150px;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 50%;
        }

        .application-header h4 {
            margin: 0;
            font-size: 1.35rem;
            font-weight: 600;
            color: white;
            position: relative;
            z-index: 1;
        }

        .application-header i {
            margin-right: 8px;
            font-size: 1.2rem;
            vertical-align: middle;
        }

    .application-subtitle {
        margin: 4px 0 0 0;
        color: rgba(255, 255, 255, 0.95);
        font-size: 0.8rem;
        position: relative;
        z-index: 1;
    }

    .application-body {
        padding: 20px 24px;
    }

    /* Compact Progress Indicator */
    .form-progress {
        background: linear-gradient(90deg, rgba(39, 174, 96, 0.1) 0%, rgba(34, 153, 84, 0.05) 100%);
        border-left: 3px solid var(--bank-success);
        padding: 10px 14px;
        border-radius: 6px;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .form-progress h6 {
            color: var(--bank-primary);
            font-weight: 600;
            margin: 0;
            font-size: 0.85rem;
        }

        .form-progress i {
            color: var(--bank-success);
            font-size: 1rem;
        }

    .progress-text {
        color: #6c757d;
        font-size: 0.75rem;
        margin: 0;
        line-height: 1.4;
    }

    /* Compact Form Sections */
    .form-section-divider {
        display: flex;
        align-items: center;
        margin: 16px 0 12px 0;
    }

        .form-section-divider::before,
        .form-section-divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: var(--bank-border);
        }

    .form-section-title {
        padding: 0 12px;
        color: var(--bank-primary);
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.3px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

        .form-section-title i {
            color: var(--bank-success);
            font-size: 0.9rem;
        }

    .form-group-custom {
        margin-bottom: 12px;
    }

    .form-label {
        font-weight: 600;
        color: var(--bank-primary);
        margin-bottom: 4px;
        font-size: 0.8rem;
        letter-spacing: 0.2px;
        display: flex;
        align-items: center;
    }

    .required-indicator {
        color: #dc3545;
        margin-left: 3px;
    }

    .form-control,
    .form-select {
        border: 1px solid var(--bank-border);
        border-radius: 6px;
        padding: 6px 10px;
        font-size: 0.85rem;
        transition: all 0.2s ease;
        background-color: #fafbfc;
        height: 32px;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: var(--bank-success);
            box-shadow: 0 0 0 2px rgba(39, 174, 96, 0.1);
            outline: none;
            background-color: white;
        }

    .form-select {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%231e3a5f' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
        background-size: 12px;
    }

    /* Compact File Upload */
    .file-upload-label {
        display: block;
        padding: 10px;
        background: linear-gradient(135deg, #fafbfc 0%, #f0f2f5 100%);
        border: 1px dashed var(--bank-border);
        border-radius: 6px;
        text-align: center;
        cursor: pointer;
        transition: all 0.2s ease;
    }

        .file-upload-label:hover {
            border-color: var(--bank-success);
            background: linear-gradient(135deg, #f0f8f4 0%, #e8f5e9 100%);
        }

        .file-upload-label i {
            font-size: 1.3rem;
            color: var(--bank-success);
            margin-bottom: 4px;
            display: block;
        }

    .file-upload-text {
        color: var(--bank-primary);
        font-weight: 600;
        margin-bottom: 2px;
        font-size: 0.8rem;
    }

    .file-upload-hint {
        color: #6c757d;
        font-size: 0.7rem;
    }

    input[type="file"] {
        display: none;
    }

    /* Profile Picture Preview Styles */
    .image-preview-container {
        display: none;
        align-items: center;
        justify-content: center;
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 3px solid var(--bank-success);
        overflow: hidden;
        background: #fafbfc;
        box-shadow: 0 4px 12px var(--bank-shadow);
        margin: 0 auto;
    }

    #imagePreview {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .preview-label {
        display: none;
    }

    /* Compact Helper Text */
    .field-helper {
        font-size: 0.7rem;
        color: #6c757d;
        margin-top: 2px;
        display: flex;
        align-items: center;
        gap: 3px;
    }

        .field-helper i {
            font-size: 0.7rem;
        }

    .form-text {
        font-size: 0.7rem;
        color: #6c757d;
        margin-top: 2px;
    }

    .text-danger {
        font-size: 0.7rem;
        margin-top: 2px;
        display: block;
    }

    .validation-summary {
        background: #fff3cd;
        border-left: 3px solid #ffc107;
        padding: 10px;
        border-radius: 6px;
        margin-bottom: 12px;
        font-size: 0.8rem;
    }

    /* Compact Buttons */
    .btn-submit {
        background: linear-gradient(135deg, var(--bank-success) 0%, var(--bank-success-dark) 100%);
        border: none;
        padding: 8px 20px;
        font-size: 0.9rem;
        font-weight: 600;
        border-radius: 6px;
        transition: all 0.2s ease;
        box-shadow: 0 2px 8px rgba(39, 174, 96, 0.25);
        color: white;
    }

        .btn-submit:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(39, 174, 96, 0.35);
            color: white;
        }

    .btn-back {
        background: white;
        border: 1px solid var(--bank-border);
        color: var(--bank-primary);
        padding: 8px 20px;
        font-size: 0.9rem;
        font-weight: 600;
        border-radius: 6px;
        transition: all 0.2s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-back:hover {
            background: var(--bank-light);
            border-color: var(--bank-secondary);
            color: var(--bank-secondary);
            text-decoration: none;
        }

    .btn-group-actions {
        display: flex;
        gap: 12px;
        margin-top: 16px;
    }

        .btn-group-actions button,
        .btn-group-actions a {
            flex: 1;
            text-align: center;
        }

    /* Multi-column layout for fields */
    .row-compact {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 12px;
    }

    .row-compact-2 {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
    }

    @@media (max-width: 992px) {
        .row-compact {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 768px) {
        .row-compact,
        .row-compact-2 {
            grid-template-columns: 1fr;
        }

        .application-body {
            padding: 16px;
        }

        .application-header {
            padding: 12px 16px;
        }

        .btn-group-actions {
            flex-direction: column;
        }
    }
</style>

<div class="application-container">
    <div class="container-fluid px-3">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-10">
                <div class="application-card">
                    <div class="application-header">
                        <h4><i class="fas fa-user-plus"></i> Bank Account Application</h4>
                        <p class="application-subtitle">Complete all required fields marked with (*)</p>
                    </div>
                    <div class="application-body">
                        @* <div class="form-progress">
                            <i class="fas fa-shield-alt"></i>
                            <div>
                                <h6>Secure Application</h6>
                                <p class="progress-text">Your information is encrypted and secured</p>
                            </div>
                        </div> *@

                        <form asp-action="Create" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="validation-summary text-danger"></div>

                            <!-- Personal Information -->
                            <div class="form-section-divider">
                                <span class="form-section-title">
                                    <i class="fas fa-user"></i> Personal Information
                                </span>
                            </div>

                            <div class="row-compact">
                                <div class="form-group-custom">
                                    <label asp-for="FullName" class="form-label">
                                        Full Name<span class="required-indicator">*</span>
                                    </label>
                                    <input asp-for="FullName" class="form-control" placeholder="Full name as per ID" />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>

                                <div class="form-group-custom">
                                    <label asp-for="DateOfBirth" class="form-label">
                                        Date of Birth<span class="required-indicator">*</span>
                                    </label>
                                    <input asp-for="DateOfBirth" type="date" class="form-control" min="1920-01-01" max="@DateTime.Now.AddYears(-10).ToString("yyyy-MM-dd")" required />
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>

                                <div class="form-group-custom">
                                    <label asp-for="Gender" class="form-label">
                                        Gender<span class="required-indicator">*</span>
                                    </label>
                                    <select asp-for="Gender" class="form-select">
                                        <option value="">Select</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row-compact-2">
                                <div class="form-group-custom">
                                    <label asp-for="Occupation" class="form-label">
                                        Occupation<span class="required-indicator">*</span>
                                    </label>
                                    <input asp-for="Occupation" class="form-control" placeholder="Your occupation" />
                                    <span asp-validation-for="Occupation" class="text-danger"></span>
                                </div>

                                <div class="form-group-custom">
                                    <label asp-for="MobileNumber" class="form-label">
                                        Mobile Number<span class="required-indicator">*</span>
                                    </label>
                                    <input asp-for="MobileNumber" class="form-control" placeholder="+91 XXXXX XXXXX" />
                                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Contact & Identification -->
                            <div class="form-section-divider">
                                <span class="form-section-title">
                                    <i class="fas fa-id-card"></i> Identification
                                </span>
                            </div>

                            <div class="row-compact">
                                <div class="form-group-custom">
                                    <label asp-for="AadharNumber" class="form-label">
                                        Aadhar Number<span class="required-indicator">*</span>
                                    </label>
                                    <input asp-for="AadharNumber" class="form-control" maxlength="12" placeholder="12-digit Aadhar" />
                                    <span asp-validation-for="AadharNumber" class="text-danger"></span>
                                </div>

                                <div class="form-group-custom">
                                    <label asp-for="PAN" class="form-label">
                                        PAN<span class="required-indicator">*</span>
                                    </label>
                                    <input asp-for="PAN" class="form-control" maxlength="10" style="text-transform: uppercase;" placeholder="ABCDE1234F" />
                                    <span asp-validation-for="PAN" class="text-danger"></span>
                                </div>

                                <div class="form-group-custom">
                                    <label asp-for="AccountTypeID" class="form-label">
                                        Account Type<span class="required-indicator">*</span>
                                    </label>
                                    <select asp-for="AccountTypeID" class="form-select">
                                        <option value="">Select Type</option>
                                        @foreach (var type in Model.AvailableAccountTypes)
                                        {
                                            <option value="@type.AccountTypeID">@type.TypeName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="AccountTypeID" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Document Upload -->
                            <div class="form-section-divider">
                                <span class="form-section-title">
                                    <i class="fas fa-upload"></i> Document Upload
                                </span>
                            </div>

                            <div class="row-compact-2">
                                <div class="form-group-custom">
                                    <label class="form-label">Profile Image</label>
                                    <div class="file-upload-wrapper">
                                        <label for="imageFile" class="file-upload-label">
                                            <i class="fas fa-cloud-upload-alt"></i>
                                            <div class="file-upload-text">Upload Photo</div>
                                            <div class="file-upload-hint">PNG, JPG (Max 5MB)</div>
                                        </label>
                                        <input asp-for="ImageFile" type="file" id="imageFile" class="form-control" accept="image/*" />
                                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-group-custom">
                                    <label class="form-label preview-label" id="previewLabel">Preview</label>
                                    <div class="image-preview-container" id="previewContainer">
                                        <img id="imagePreview" alt="Profile Preview" />
                                    </div>
                                </div>
                            </div>

                            <div class="btn-group-actions">
                                <button type="submit" class="btn btn-submit">
                                    <i class="fas fa-paper-plane"></i> Submit Application
                                </button>
                                <a href="@Url.Action("Index", "Home")" class="btn btn-back">
                                    <i class="fas fa-arrow-left"></i> Back to Home
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('#imageFile').on('change', function(e) {
                var file = e.target.files[0];
                
                if (file) {
                    // Update upload label text
                    $('.file-upload-text').text(file.name);
                    
                    // Show image preview
                    if (file.type.startsWith('image/')) {
                        var reader = new FileReader();
                        
                        reader.onload = function(event) {
                            $('#imagePreview').attr('src', event.target.result);
                            $('#previewContainer').css('display', 'flex');
                            $('#previewLabel').show();
                        };
                        
                        reader.readAsDataURL(file);
                    }
                } else {
                    // Reset if no file selected
                    $('#previewContainer').hide();
                    $('#previewLabel').hide();
                    $('#imagePreview').attr('src', '');
                    $('.file-upload-text').text('Upload Photo');
                }
            });
        });
    </script>
}
