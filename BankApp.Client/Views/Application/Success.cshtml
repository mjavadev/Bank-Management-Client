@{
    ViewData["Title"] = "Application Submitted";
}

<style>
    :root {
        --bank-primary: #1e3a5f;
        --bank-secondary: #2c5f8d;
        --bank-accent: #3498db;
        --bank-success: #27ae60;
        --bank-success-dark: #229954;
        --bank-light: #f8f9fa;
        --bank-border: #e1e8ed;
        --bank-shadow: rgba(30, 58, 95, 0.08);
    }

    .success-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 50%, #a5d6a7 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px 20px;
        position: relative;
        overflow: hidden;
    }

        .success-container::before {
            content: '';
            position: absolute;
            top: -10%;
            right: -5%;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }

        .success-container::after {
            content: '';
            position: absolute;
            bottom: -15%;
            left: -5%;
            width: 500px;
            height: 500px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
            border-radius: 50%;
            animation: float 8s ease-in-out infinite reverse;
        }

    @@keyframes float {
        0%, 100%

    {
        transform: translateY(0) translateX(0);
    }

    50% {
        transform: translateY(-20px) translateX(20px);
    }

    }

    .success-card {
        background: white;
        border-radius: 24px;
        box-shadow: 0 20px 60px rgba(39, 174, 96, 0.2);
        overflow: hidden;
        max-width: 600px;
        width: 100%;
        position: relative;
        z-index: 1;
        animation: slideUp 0.6s ease-out;
    }

    @@keyframes slideUp {
        from

    {
        opacity: 0;
        transform: translateY(30px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .success-header {
        background: linear-gradient(135deg, var(--bank-success) 0%, var(--bank-success-dark) 100%);
        padding: 40px 32px 80px;
        position: relative;
        overflow: hidden;
    }

        .success-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -20%;
            width: 300px;
            height: 300px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
        }

        .success-header::after {
            content: '';
            position: absolute;
            bottom: -30%;
            left: -10%;
            width: 200px;
            height: 200px;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 50%;
        }

    .success-icon-wrapper {
        position: relative;
        z-index: 1;
        display: flex;
        justify-content: center;
        margin-bottom: 24px;
    }

    .success-icon-circle {
        width: 120px;
        height: 120px;
        background: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        animation: scaleIn 0.6s ease-out 0.3s both;
    }

    @@keyframes scaleIn {
        from

    {
        transform: scale(0);
        opacity: 0;
    }

    to {
        transform: scale(1);
        opacity: 1;
    }

    }

    .success-icon-circle i {
        font-size: 4rem;
        color: var(--bank-success);
        animation: checkmark 0.8s ease-out 0.6s both;
    }

    @@keyframes checkmark {
        0%

    {
        transform: scale(0) rotate(-45deg);
        opacity: 0;
    }

    50% {
        transform: scale(1.2) rotate(10deg);
    }

    100% {
        transform: scale(1) rotate(0deg);
        opacity: 1;
    }

    }

    .success-title {
        position: relative;
        z-index: 1;
        color: white;
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        margin: 0;
        animation: fadeIn 0.6s ease-out 0.9s both;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .success-body {
        padding: 48px 40px;
        text-align: center;
        position: relative;
        margin-top: -40px;
    }

    .success-message-card {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border: 2px solid #c8e6c9;
        border-radius: 16px;
        padding: 32px;
        margin-bottom: 32px;
    }

    .success-subtitle {
        color: var(--bank-primary);
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 16px;
    }

    .success-description {
        color: #6c757d;
        font-size: 1.05rem;
        line-height: 1.6;
        margin-bottom: 0;
    }

    .info-steps {
        background: white;
        border: 2px solid var(--bank-border);
        border-radius: 12px;
        padding: 24px;
        margin-bottom: 32px;
        text-align: left;
    }

    .info-steps-title {
        color: var(--bank-primary);
        font-weight: 600;
        font-size: 1.1rem;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .info-steps-title i {
            color: var(--bank-success);
        }

    .step-item {
        display: flex;
        align-items: flex-start;
        gap: 16px;
        margin-bottom: 16px;
    }

        .step-item:last-child {
            margin-bottom: 0;
        }

    .step-number {
        width: 32px;
        height: 32px;
        background: linear-gradient(135deg, var(--bank-success) 0%, var(--bank-success-dark) 100%);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.9rem;
        flex-shrink: 0;
    }

    .step-content {
        flex: 1;
    }

    .step-title {
        color: var(--bank-primary);
        font-weight: 600;
        margin-bottom: 4px;
        font-size: 0.95rem;
    }

    .step-description {
        color: #6c757d;
        font-size: 0.9rem;
        margin: 0;
    }

    .divider {
        height: 2px;
        background: linear-gradient(90deg, transparent 0%, var(--bank-border) 50%, transparent 100%);
        margin: 32px 0;
    }

    .additional-info {
        background: rgba(39, 174, 96, 0.05);
        border-left: 4px solid var(--bank-success);
        border-radius: 8px;
        padding: 16px 20px;
        margin-bottom: 32px;
        text-align: left;
    }

        .additional-info p {
            margin: 0;
            color: var(--bank-primary);
            font-size: 0.95rem;
            line-height: 1.6;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .additional-info i {
            color: var(--bank-success);
            font-size: 1.1rem;
        }

    .btn-home {
        background: linear-gradient(135deg, var(--bank-primary) 0%, var(--bank-secondary) 100%);
        border: none;
        padding: 16px 48px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 12px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 16px rgba(30, 58, 95, 0.25);
        color: white;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

        .btn-home:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(30, 58, 95, 0.35);
            background: linear-gradient(135deg, var(--bank-secondary) 0%, var(--bank-primary) 100%);
            color: white;
            text-decoration: none;
        }

    .security-note {
        margin-top: 24px;
        padding-top: 24px;
        border-top: 1px solid var(--bank-border);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        color: #6c757d;
        font-size: 0.9rem;
    }

        .security-note i {
            color: var(--bank-success);
        }

    @@media (max-width: 768px) {
        .success-title

    {
        font-size: 1.5rem;
    }

    .success-body {
        padding: 32px 24px;
    }

    .success-subtitle {
        font-size: 1.1rem;
    }

    .btn-home {
        width: 100%;
        justify-content: center;
    }

    }
</style>

<div class="success-container">
    <div class="success-card">
        <div class="success-header">
            <div class="success-icon-wrapper">
                <div class="success-icon-circle">
                    <i class="fas fa-check-circle"></i>
                </div>
            </div>
            <h1 class="success-title">Application Submitted Successfully!</h1>
        </div>

        <div class="success-body">
            <div class="success-message-card">
                <p class="success-subtitle">Thank You for Choosing Us</p>
                <p class="success-description">
                    Your bank account application has been received and is now under review by our team.
                </p>
            </div>

            <div class="info-steps">
                <div class="info-steps-title">
                    <i class="fas fa-route"></i>
                    What Happens Next?
                </div>

                <div class="step-item">
                    <div class="step-number">1</div>
                    <div class="step-content">
                        <div class="step-title">Application Review</div>
                        <p class="step-description">Our team will carefully review your application and documents</p>
                    </div>
                </div>

                <div class="step-item">
                    <div class="step-number">2</div>
                    <div class="step-content">
                        <div class="step-title">Verification Process</div>
                        <p class="step-description">We'll verify your information and may contact you if additional details are needed</p>
                    </div>
                </div>

                <div class="step-item">
                    <div class="step-number">3</div>
                    <div class="step-content">
                        <div class="step-title">Account Approval</div>
                        <p class="step-description">Once approved, you'll receive your login credentials via email and SMS</p>
                    </div>
                </div>
            </div>

            <div class="additional-info">
                <p>
                    <i class="fas fa-clock"></i>
                    <span><strong>Processing Time:</strong> Typically 2-3 business days</span>
                </p>
            </div>

            <div class="divider"></div>

            <a href="@Url.Action("Index", "Home")" class="btn-home">
                <i class="fas fa-home"></i> Return to Home
            </a>

            <div class="security-note">
                <i class="fas fa-shield-alt"></i>
                <span>Your information is secure and encrypted</span>
            </div>
        </div>
    </div>
</div>
