@using BankApp.Client.Dto
@model ApplicationDto

@{
    ViewData["Title"] = "Application Details";
}

<style>
    :root {
        --bank-primary: #1e3a5f;
        --bank-secondary: #2c5f8d;
        --bank-accent: #3498db;
        --bank-success: #27ae60;
        --bank-warning: #f39c12;
        --bank-danger: #e74c3c;
        --bank-info: #16a085;
        --bank-light: #f8f9fa;
        --bank-border: #e1e8ed;
        --bank-shadow: rgba(30, 58, 95, 0.08);
    }

    .details-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
        padding: 40px 0;
    }

    .details-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 8px 24px var(--bank-shadow);
        border: 1px solid var(--bank-border);
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        .details-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 32px rgba(30, 58, 95, 0.12);
        }

    .details-header {
        background: linear-gradient(135deg, var(--bank-info) 0%, #138d75 100%);
        padding: 32px;
        position: relative;
        overflow: hidden;
    }

        .details-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 200px;
            height: 200px;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 50%;
        }

        .details-header::after {
            content: '';
            position: absolute;
            bottom: -30%;
            left: -5%;
            width: 150px;
            height: 150px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 50%;
        }

    .details-header-content {
        position: relative;
        z-index: 1;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 16px;
    }

    .details-header h4 {
        margin: 0;
        font-size: 1.75rem;
        font-weight: 600;
        color: white;
    }

    .details-header i {
        margin-right: 12px;
        font-size: 1.5rem;
        vertical-align: middle;
    }

    .application-id-badge {
        background: rgba(255, 255, 255, 0.25);
        padding: 8px 20px;
        border-radius: 20px;
        font-size: 1rem;
        font-weight: 600;
        color: white;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .details-body {
        padding: 40px;
    }

    /* Status Card */
    .status-overview-card {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 12px;
        padding: 24px;
        margin-bottom: 32px;
        border-left: 4px solid var(--bank-info);
    }

    .status-overview-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 16px;
    }

        .status-overview-header h5 {
            margin: 0;
            color: var(--bank-primary);
            font-weight: 600;
            font-size: 1.1rem;
        }

    .status-badge-large {
        padding: 8px 20px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .status-badge-large i {
            font-size: 1.1rem;
        }

    .status-pending {
        background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(243, 156, 18, 0.3);
    }

    .status-approved {
        background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(39, 174, 96, 0.3);
    }

    .status-rejected {
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(231, 76, 60, 0.3);
    }

    .application-meta {
        display: flex;
        gap: 24px;
        color: #6c757d;
        font-size: 0.95rem;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 6px;
    }

        .meta-item i {
            color: var(--bank-info);
        }

    /* Section Dividers */
    .section-divider {
        display: flex;
        align-items: center;
        margin: 32px 0 24px 0;
    }

        .section-divider::before,
        .section-divider::after {
            content: '';
            flex: 1;
            height: 2px;
            background: linear-gradient(90deg, var(--bank-border) 0%, transparent 100%);
        }

        .section-divider::after {
            background: linear-gradient(90deg, transparent 0%, var(--bank-border) 100%);
        }

    .section-title {
        padding: 0 16px;
        color: var(--bank-primary);
        font-weight: 600;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .section-title i {
            color: var(--bank-info);
        }

    /* Detail Items */
    .detail-row {
        margin-bottom: 24px;
    }

    .detail-item {
        background: #fafbfc;
        border: 1px solid var(--bank-border);
        border-radius: 10px;
        padding: 16px 20px;
        transition: all 0.3s ease;
        height: 100%;
    }

        .detail-item:hover {
            background: white;
            border-color: var(--bank-info);
            box-shadow: 0 4px 12px rgba(22, 160, 133, 0.1);
        }

    .detail-label {
        font-weight: 600;
        color: #6c757d;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

        .detail-label i {
            font-size: 0.9rem;
            color: var(--bank-info);
        }

    .detail-value {
        color: var(--bank-primary);
        font-size: 1.05rem;
        font-weight: 500;
        margin: 0;
        word-wrap: break-word;
    }

    /* Special Styling for Sensitive Data */
    .sensitive-data {
        font-family: 'Courier New', monospace;
        letter-spacing: 1px;
        background: rgba(22, 160, 133, 0.05);
        padding: 4px 8px;
        border-radius: 4px;
        display: inline-block;
    }

    /* Rejection Alert */
    .rejection-alert {
        background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
        border-left: 4px solid var(--bank-danger);
        border-radius: 8px;
        padding: 20px 24px;
        margin-top: 24px;
    }

    .rejection-alert-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 12px;
    }

    .rejection-alert-icon {
        width: 40px;
        height: 40px;
        background: var(--bank-danger);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
    }

    .rejection-alert-title {
        margin: 0;
        color: var(--bank-danger);
        font-weight: 700;
        font-size: 1.1rem;
    }

    .rejection-alert-body {
        color: #721c24;
        line-height: 1.6;
        margin: 0;
        padding-left: 52px;
    }

    /* Action Buttons */
    .btn-back {
        background: white;
        border: 2px solid var(--bank-border);
        color: var(--bank-primary);
        padding: 14px 32px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
        width: 100%;
        text-align: center;
    }

        .btn-back:hover {
            background: var(--bank-light);
            border-color: var(--bank-info);
            color: var(--bank-info);
            text-decoration: none;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .details-body

    {
        padding: 24px;
    }

    .details-header {
        padding: 24px;
    }

    .details-header-content {
        flex-direction: column;
        align-items: flex-start;
    }

    .application-id-badge {
        width: 100%;
        justify-content: center;
    }

    .application-meta {
        flex-direction: column;
        gap: 8px;
    }

    }
</style>

<div class="details-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9 col-md-10">
                <div class="details-card">
                    <div class="details-header">
                        <div class="details-header-content">
                            <h4><i class="fas fa-file-alt"></i> Application Details</h4>
                            <div class="application-id-badge">
                                <i class="fas fa-hashtag"></i>
                                <span>@Model.ApplicationID</span>
                            </div>
                        </div>
                    </div>
                    <div class="details-body">
                        <!-- Status Overview -->
                        <div class="status-overview-card">
                            <div class="status-overview-header">
                                <h5><i class="fas fa-clipboard-check"></i> Application Status</h5>
                                @if (Model.Status == 1)
                                {
                                    <span class="status-badge-large status-pending">
                                        <i class="fas fa-clock"></i> Pending Review
                                    </span>
                                }
                                else if (Model.Status == 2)
                                {
                                    <span class="status-badge-large status-approved">
                                        <i class="fas fa-check-circle"></i> Approved
                                    </span>
                                }
                                else
                                {
                                    <span class="status-badge-large status-rejected">
                                        <i class="fas fa-times-circle"></i> Rejected
                                    </span>
                                }
                            </div>
                            <div class="application-meta">
                                <div class="meta-item">
                                    <i class="far fa-calendar-alt"></i>
                                    <span>Applied: @Model.ApplicationDate.ToString("dd MMM yyyy")</span>
                                </div>
                                <div class="meta-item">
                                    <i class="far fa-clock"></i>
                                    <span>@Model.ApplicationDate.ToString("HH:mm")</span>
                                </div>
                            </div>
                        </div>

                        <!-- Personal Information Section -->
                        <div class="section-divider">
                            <span class="section-title">
                                <i class="fas fa-user"></i> Personal Information
                            </span>
                        </div>

                        <div class="row detail-row">
                            <div class="col-md-6 mb-3">
                                <div class="detail-item">
                                    <div class="detail-label">
                                        <i class="fas fa-user-circle"></i> Full Name
                                    </div>
                                    <p class="detail-value">@Model.FullName</p>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="detail-item">
                                    <div class="detail-label">
                                        <i class="fas fa-birthday-cake"></i> Date of Birth
                                    </div>
                                    <p class="detail-value">@Model.DateOfBirth.ToString("dd MMM yyyy")</p>
                                </div>
                            </div>
                        </div>

                        <div class="row detail-row">
                            <div class="col-md-6 mb-3">
                                <div class="detail-item">
                                    <div class="detail-label">
                                        <i class="fas fa-venus-mars"></i> Gender
                                    </div>
                                    <p class="detail-value">@Model.Gender</p>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="detail-item">
                                    <div class="detail-label">
                                        <i class="fas fa-briefcase"></i> Occupation
                                    </div>
                                    <p class="detail-value">@Model.Occupation</p>
                                </div>
                            </div>
                        </div>

                        <!-- Contact & Identification Section -->
                        <div class="section-divider">
                            <span class="section-title">
                                <i class="fas fa-id-card"></i> Contact & Identification
                            </span>
                        </div>

                        <div class="row detail-row">
                            <div class="col-md-6 mb-3">
                                <div class="detail-item">
                                    <div class="detail-label">
                                        <i class="fas fa-mobile-alt"></i> Mobile Number
                                    </div>
                                    <p class="detail-value">@Model.MobileNumber</p>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="detail-item">
                                    <div class="detail-label">
                                        <i class="fas fa-id-card-alt"></i> Aadhar Number
                                    </div>
                                    <p class="detail-value">
                                        <span class="sensitive-data">@Model.AadharNumber</span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="row detail-row">
                            <div class="col-md-6 mb-3">
                                <div class="detail-item">
                                    <div class="detail-label">
                                        <i class="fas fa-credit-card"></i> PAN
                                    </div>
                                    <p class="detail-value">
                                        <span class="sensitive-data">@Model.PAN</span>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="detail-item">
                                    <div class="detail-label">
                                        <i class="fas fa-university"></i> Account Type
                                    </div>
                                    <p class="detail-value">
                                        @(Model.AccountTypeID == 1 ? "Savings Account" : "Current Account")
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Rejection Reason (if applicable) -->
                        @if (Model.Status == 3 && !string.IsNullOrEmpty(Model.RejectionReason))
                        {
                            <div class="rejection-alert">
                                <div class="rejection-alert-header">
                                    <div class="rejection-alert-icon">
                                        <i class="fas fa-exclamation-triangle"></i>
                                    </div>
                                    <h6 class="rejection-alert-title">Application Rejected</h6>
                                </div>
                                <p class="rejection-alert-body">
                                    <strong>Reason:</strong> @Model.RejectionReason
                                </p>
                            </div>
                        }

                        <!-- Action Button -->
                        <div class="mt-4">
                            <a href="@Url.Action("PendingApplications", "Manager")" class="btn-back">
                                <i class="fas fa-arrow-left"></i> Back to Applications
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
