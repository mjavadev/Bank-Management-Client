@model List<BankApp.Client.Dto.CustomerDto>

@{
    ViewData["Title"] = "Customers";
}

<style>
    :root {
        --bank-primary: #1e3a5f;
        --bank-secondary: #2c5f8d;
        --bank-accent: #3498db;
        --bank-success: #27ae60;
        --bank-warning: #f39c12;
        --bank-danger: #e74c3c;
        --bank-info: #16a085;
        --bank-light: #f8f9fa;
        --bank-border: #e1e8ed;
        --bank-shadow: rgba(30, 58, 95, 0.08);
    }

    .customers-container {
        background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
        min-height: 100vh;
        padding: 32px 0;
    }

    /* Page Header */
    .page-header {
        background: white;
        border-radius: 16px;
        padding: 32px;
        margin-bottom: 32px;
        box-shadow: 0 4px 16px var(--bank-shadow);
        border-left: 6px solid var(--bank-success);
    }

        .page-header h2 {
            color: var(--bank-primary);
            font-weight: 700;
            font-size: 2rem;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 16px;
        }

            .page-header h2 i {
                color: var(--bank-success);
                font-size: 1.8rem;
            }

    .page-subtitle {
        color: #6c757d;
        margin-top: 8px;
        font-size: 1rem;
    }

    /* Statistics Overview */
    .stats-overview {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 20px;
        margin-bottom: 32px;
    }

    .stat-card {
        background: white;
        border-radius: 12px;
        padding: 24px 28px;
        box-shadow: 0 4px 16px var(--bank-shadow);
        border-left: 4px solid;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .stat-card::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -20%;
            width: 150px;
            height: 150px;
            background: radial-gradient(circle, rgba(52, 152, 219, 0.1) 0%, transparent 70%);
            border-radius: 50%;
        }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(30, 58, 95, 0.12);
        }

        .stat-card.total {
            border-left-color: var(--bank-accent);
        }

        .stat-card.active {
            border-left-color: var(--bank-success);
        }

        .stat-card.inactive {
            border-left-color: #6c757d;
        }

    .stat-label {
        color: #6c757d;
        font-size: 0.9rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
        position: relative;
        z-index: 1;
    }

    .stat-value {
        color: var(--bank-primary);
        font-size: 2.2rem;
        font-weight: 700;
        margin: 0;
        position: relative;
        z-index: 1;
    }

    /* Main Card */
    .customers-card {
        background: white;
        border-radius: 16px;
        border: 1px solid var(--bank-border);
        box-shadow: 0 4px 16px var(--bank-shadow);
        overflow: hidden;
    }

    .customers-card-header {
        background: linear-gradient(135deg, var(--bank-light) 0%, #ffffff 100%);
        padding: 24px 28px;
        border-bottom: 2px solid var(--bank-border);
    }

        .customers-card-header h5 {
            margin: 0;
            color: var(--bank-primary);
            font-weight: 700;
            font-size: 1.3rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .customers-card-header h5 i {
                color: var(--bank-success);
            }

    .customers-card-body {
        padding: 28px;
    }

    /* Customers Table */
    .customers-table {
        width: 100%;
    }

        .customers-table thead th {
            background: linear-gradient(135deg, var(--bank-primary) 0%, var(--bank-secondary) 100%);
            color: white;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
            padding: 16px 12px;
            border: none;
            white-space: nowrap;
        }

            .customers-table thead th:first-child {
                border-top-left-radius: 8px;
            }

            .customers-table thead th:last-child {
                border-top-right-radius: 8px;
            }

        .customers-table tbody tr {
            transition: all 0.3s ease;
            border-bottom: 1px solid var(--bank-border);
        }

            .customers-table tbody tr:hover {
                background: linear-gradient(90deg, rgba(39, 174, 96, 0.05) 0%, rgba(30, 58, 95, 0.03) 100%);
                transform: scale(1.005);
                box-shadow: 0 2px 8px rgba(30, 58, 95, 0.08);
            }

        .customers-table tbody td {
            padding: 16px 12px;
            vertical-align: middle;
            color: var(--bank-primary);
            font-size: 0.95rem;
        }

        .customers-table tbody tr:last-child {
            border-bottom: none;
        }

    /* Customer ID Styling */
    .customer-id {
        font-weight: 600;
        color: var(--bank-accent);
        font-family: 'Courier New', monospace;
    }

    /* Username Badge */
    .username-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 4px 12px;
        background: rgba(52, 152, 219, 0.1);
        border-radius: 6px;
        color: var(--bank-accent);
        font-weight: 600;
        font-size: 0.9rem;
    }

    /* Customer Name Styling */
    .customer-name {
        font-weight: 600;
        color: var(--bank-primary);
    }

    /* Sensitive Data Styling */
    .sensitive-data {
        font-family: 'Courier New', monospace;
        letter-spacing: 1px;
        color: var(--bank-primary);
        font-weight: 500;
    }

    /* Status Badges */
    .status-badge {
        padding: 6px 14px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.85rem;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        white-space: nowrap;
    }

    .badge-active {
        background: rgba(39, 174, 96, 0.15);
        color: var(--bank-success);
    }

    .badge-inactive {
        background: rgba(108, 117, 125, 0.15);
        color: #6c757d;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 32px;
    }

    .empty-state-icon {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, var(--bank-light) 0%, #e9ecef 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 24px;
    }

        .empty-state-icon i {
            font-size: 3rem;
            color: var(--bank-success);
        }

    .empty-state h5 {
        color: var(--bank-primary);
        font-weight: 600;
        margin-bottom: 12px;
    }

    .empty-state p {
        color: #6c757d;
        font-size: 1rem;
    }

    /* Customer Avatar */
    .customer-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--bank-success) 0%, #229954 100%);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 1rem;
        margin-right: 12px;
    }

    /* DataTables Custom Styling */
    .dataTables_wrapper .dataTables_length select,
    .dataTables_wrapper .dataTables_filter input {
        border: 2px solid var(--bank-border);
        border-radius: 8px;
        padding: 8px 12px;
        transition: all 0.3s ease;
    }

        .dataTables_wrapper .dataTables_length select:focus,
        .dataTables_wrapper .dataTables_filter input:focus {
            border-color: var(--bank-success);
            outline: none;
            box-shadow: 0 0 0 3px rgba(39, 174, 96, 0.1);
        }

    .dataTables_wrapper .dataTables_paginate .paginate_button {
        border-radius: 8px;
        padding: 8px 16px;
        margin: 0 4px;
        border: 2px solid var(--bank-border);
        background: white;
        color: var(--bank-primary);
        transition: all 0.3s ease;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: linear-gradient(135deg, var(--bank-primary) 0%, var(--bank-secondary) 100%);
            color: white !important;
            border-color: var(--bank-primary);
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            background: linear-gradient(135deg, var(--bank-primary) 0%, var(--bank-secondary) 100%);
            color: white !important;
            border-color: var(--bank-primary);
        }

    .dataTables_wrapper .dataTables_info {
        color: #6c757d;
        font-size: 0.9rem;
        padding: 12px 0;
    }

    @@media (max-width: 768px) {
        .page-header h2

    {
        font-size: 1.5rem;
    }

    .stats-overview {
        grid-template-columns: 1fr;
    }

    .customers-card-body {
        padding: 16px;
    }

    .customer-avatar {
        display: none;
    }

    }
</style>

<div class="customers-container">
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="page-header">
            <h2>
                <i class="fas fa-users"></i>
                All Customers
            </h2>
            <p class="page-subtitle">View and manage all registered banking customers</p>
        </div>

        <!-- Statistics Overview -->
        @if (Model.Any())
        {
            var totalCount = Model.Count();
            var activeCount = Model.Count(c => c.IsActive);
            var inactiveCount = Model.Count(c => !c.IsActive);

            <div class="stats-overview">
                <div class="stat-card total">
                    <div class="stat-label">
                        <i class="fas fa-user-friends"></i> Total Customers
                    </div>
                    <h3 class="stat-value">@totalCount</h3>
                </div>
                <div class="stat-card active">
                    <div class="stat-label">
                        <i class="fas fa-user-check"></i> Active Customers
                    </div>
                    <h3 class="stat-value">@activeCount</h3>
                </div>
                <div class="stat-card inactive">
                    <div class="stat-label">
                        <i class="fas fa-user-slash"></i> Inactive Customers
                    </div>
                    <h3 class="stat-value">@inactiveCount</h3>
                </div>
            </div>
        }

        <!-- Main Customers Card -->
        <div class="row">
            <div class="col-12">
                <div class="customers-card">
                    <div class="customers-card-header">
                        <h5><i class="fas fa-table"></i> Customer Directory</h5>
                    </div>
                    <div class="customers-card-body">
                        @if (Model.Any())
                        {
                            <div class="table-responsive">
                                <table class="customers-table table" id="customersTable">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Customer</th>
                                            <th>Username</th>
                                            <th>Date of Birth</th>
                                            <th>Mobile</th>
                                            <th>PAN</th>
                                            <th>Approval Date</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var customer in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="customer-id">#@customer.CustomerID</span>
                                                </td>
                                                <td>
                                                    <div style="display: flex; align-items: center;">
                                                        <div class="customer-avatar">
                                                            @customer.FullName.Substring(0, 1).ToUpper()
                                                        </div>
                                                        <span class="customer-name">@customer.FullName</span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="username-badge">
                                                        <i class="fas fa-user"></i>@customer.UserName
                                                    </span>
                                                </td>
                                                <td>
                                                    <span>@customer.DateOfBirth.ToString("dd MMM yyyy")</span>
                                                </td>
                                                <td>
                                                    <span class="sensitive-data">@customer.MobileNumber</span>
                                                </td>
                                                <td>
                                                    <span class="sensitive-data">@customer.PAN</span>
                                                </td>
                                                <td>
                                                    @if (customer.ApprovalDate.HasValue)
                                                    {
                                                        <div>@customer.ApprovalDate.Value.ToString("dd MMM yyyy")</div>
                                                        <small style="color: #6c757d;">@customer.ApprovalDate.Value.ToString("HH:mm")</small>
                                                    }
                                                    else
                                                    {
                                                        <span style="color: #6c757d; font-style: italic;">Not approved</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (customer.IsActive)
                                                    {
                                                        <span class="status-badge badge-active">
                                                            <i class="fas fa-check-circle"></i> Active
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="status-badge badge-inactive">
                                                            <i class="fas fa-ban"></i> Inactive
                                                        </span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <div class="empty-state-icon">
                                    <i class="fas fa-users"></i>
                                </div>
                                <h5>No Customers Found</h5>
                                <p>There are currently no registered customers in the system. Approved applications will create customer records that appear here.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#customersTable').DataTable({
                "pageLength": 25,
                "order": [[0, "desc"]],
                "language": {
                    "search": "Search customers:",
                    "lengthMenu": "Show _MENU_ customers per page",
                    "info": "Showing _START_ to _END_ of _TOTAL_ customers",
                    "infoEmpty": "No customers available",
                    "infoFiltered": "(filtered from _MAX_ total customers)",
                    "paginate": {
                        "first": "First",
                        "last": "Last",
                        "next": "Next",
                        "previous": "Prev"
                    }
                },
                "responsive": true,
                "dom": '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>rtip'
            });
        });
    </script>
}
