@model List<BankApp.Client.Dto.TransactionDto>

@{
    ViewData["Title"] = "Pending Transactions";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-hourglass-half"></i> Pending Transactions</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover" id="transactionsTable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Date</th>
                                        <th>Type</th>
                                        <th>Account</th>
                                        <th>Amount</th>
                                        <th>Recipient</th>
                                        <th>Description</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var txn in Model)
                                    {
                                        <tr>
                                            <td>@txn.TransactionID</td>
                                            <td>@txn.TransactionDate.ToString("dd MMM yyyy HH:mm")</td>
                                            <td>
                                                @switch (txn.TransactionType)
                                                {
                                                    case 1:
                                                        <span class="badge bg-success">Deposit</span>
                                                        break;
                                                    case 2:
                                                        <span class="badge bg-danger">Withdrawal</span>
                                                        break;
                                                    case 3:
                                                        <span class="badge bg-info">Transfer</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@txn.AccountNumber</td>
                                            <td class="fw-bold">₹@txn.Amount.ToString("N2")</td>
                                            <td>@(txn.RecipientAccountNumber ?? "N/A")</td>
                                            <td>@txn.Description</td>
                                            <td>
                                                <button class="btn btn-sm btn-info" onclick="viewTransaction(@txn.TransactionID)">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button class="btn btn-sm btn-success" onclick="approveTransaction(@txn.TransactionID)">
                                                    <i class="fas fa-check"></i> Approve
                                                </button>
                                                <button class="btn btn-sm btn-danger" onclick="rejectTransaction(@txn.TransactionID)">
                                                    <i class="fas fa-times"></i> Reject
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No pending transactions found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Transaction Details Modal -->
<div class="modal fade" id="transactionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">Transaction Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="transactionDetails">
                <!-- Details will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#transactionsTable').DataTable({
                "pageLength": 25,
                "order": [[1, "desc"]]
            });
        });

        function viewTransaction(id) {
            $.ajax({
                url: '@Url.Action("TransactionDetails")/' + id,
                type: 'GET',
                success: function(response) {
                    if(response.success) {
                        var txn = response.transaction;
                        var typeText = '';
                        switch(txn.transactionType) {
                            case 1: typeText = 'Deposit'; break;
                            case 2: typeText = 'Withdrawal'; break;
                            case 3: typeText = 'Transfer'; break;
                        }

                        var html = '<dl class="row">';
                        html += '<dt class="col-sm-4">Transaction ID:</dt><dd class="col-sm-8">' + txn.transactionID + '</dd>';
                        html += '<dt class="col-sm-4">Type:</dt><dd class="col-sm-8">' + typeText + '</dd>';
                        html += '<dt class="col-sm-4">Account:</dt><dd class="col-sm-8">' + txn.accountNumber + '</dd>';
                        html += '<dt class="col-sm-4">Amount:</dt><dd class="col-sm-8">₹' + txn.amount.toFixed(2) + '</dd>';
                        if(txn.recipientAccountNumber) {
                            html += '<dt class="col-sm-4">Recipient:</dt><dd class="col-sm-8">' + txn.recipientAccountNumber + '</dd>';
                        }
                        html += '<dt class="col-sm-4">Description:</dt><dd class="col-sm-8">' + (txn.description || 'N/A') + '</dd>';
                        html += '<dt class="col-sm-4">Date:</dt><dd class="col-sm-8">' + new Date(txn.transactionDate).toLocaleString() + '</dd>';
                        html += '</dl>';

                        $('#transactionDetails').html(html);
                        $('#transactionModal').modal('show');
                    } else {
                        toastr.error(response.message);
                    }
                }
            });
        }

        function approveTransaction(id) {
            if(confirm('Are you sure you want to approve this transaction?')) {
                $.ajax({
                    url: '@Url.Action("ApproveTransaction")/' + id,
                    type: 'POST',
                    success: function(response) {
                        if(response.success) {
                            toastr.success(response.message);
                            setTimeout(function() {
                                location.reload();
                            }, 1500);
                        } else {
                            toastr.error(response.message);
                        }
                    }
                });
            }
        }

        function rejectTransaction(id) {
            if(confirm('Are you sure you want to reject this transaction?')) {
                $.ajax({
                    url: '@Url.Action("RejectTransaction")/' + id,
                    type: 'POST',
                    success: function(response) {
                        if(response.success) {
                            toastr.success(response.message);
                            setTimeout(function() {
                                location.reload();
                            }, 1500);
                        } else {
                            toastr.error(response.message);
                        }
                    }
                });
            }
        }
    </script>
}
