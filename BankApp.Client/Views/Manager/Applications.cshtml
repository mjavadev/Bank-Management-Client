@model List<BankApp.Client.Dto.ApplicationDto>

@{
    ViewData["Title"] = "All Applications";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-folder-open"></i> All Applications</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="applicationsTable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Full Name</th>
                                        <th>DOB</th>
                                        <th>Mobile</th>
                                        <th>PAN</th>
                                        <th>Account Type</th>
                                        <th>Status</th>
                                        <th>Application Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var app in Model)
                                    {
                                        <tr>
                                            <td>@app.ApplicationID</td>
                                            <td>@app.FullName</td>
                                            <td>@app.DateOfBirth.ToString("dd MMM yyyy")</td>
                                            <td>@app.MobileNumber</td>
                                            <td>@app.PAN</td>
                                            <td>@(app.AccountTypeID == 1 ? "Savings" : "Current")</td>
                                            <td>
                                                @if (app.Status == 1)
                                                {
                                                    <span class="badge bg-warning">Pending</span>
                                                }
                                                else if (app.Status == 2)
                                                {
                                                    <span class="badge bg-success">Approved</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Rejected</span>
                                                }
                                            </td>
                                            <td>@app.ApplicationDate.ToString("dd MMM yyyy")</td>
                                            <td>
                                                <a href="@Url.Action("Details", "Application", new { id = app.ApplicationID })" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No applications found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#applicationsTable').DataTable({
                "pageLength": 25,
                "order": [[7, "desc"]]
            });
        });
    </script>
}
