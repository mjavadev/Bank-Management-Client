@model List<BankApp.Client.Dto.TransactionDto>

@{
    ViewData["Title"] = "All Transactions";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-exchange-alt"></i> All Transactions</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="transactionsTable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Date</th>
                                        <th>Type</th>
                                        <th>Account</th>
                                        <th>Amount</th>
                                        <th>Recipient</th>
                                        <th>Status</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var txn in Model)
                                    {
                                        <tr>
                                            <td>@txn.TransactionID</td>
                                            <td>@txn.TransactionDate.ToString("dd MMM yyyy HH:mm")</td>
                                            <td>
                                                @switch (txn.TransactionType)
                                                {
                                                    case 1:
                                                        <span class="badge bg-success">Deposit</span>
                                                        break;
                                                    case 2:
                                                        <span class="badge bg-danger">Withdrawal</span>
                                                        break;
                                                    case 3:
                                                        <span class="badge bg-info">Transfer</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@txn.AccountNumber</td>
                                            <td class="fw-bold">₹@txn.Amount.ToString("N2")</td>
                                            <td>@(txn.RecipientAccountNumber ?? "N/A")</td>
                                            <td>
                                                @switch (txn.Status)
                                                {
                                                    case 1:
                                                        <span class="badge bg-warning">Pending</span>
                                                        break;
                                                    case 2:
                                                        <span class="badge bg-success">Approved</span>
                                                        break;
                                                    case 3:
                                                        <span class="badge bg-danger">Rejected</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@txn.Description</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No transactions found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#transactionsTable').DataTable({
                "pageLength": 25,
                "order": [[1, "desc"]]
            });
        });
    </script>
}
