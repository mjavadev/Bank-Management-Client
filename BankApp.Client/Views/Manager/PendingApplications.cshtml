@model List<BankApp.Client.Dto.ApplicationDto>

@{
    ViewData["Title"] = "Pending Applications";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-hourglass-half"></i> Pending Applications</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover" id="applicationsTable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Full Name</th>
                                        <th>DOB</th>
                                        <th>Mobile</th>
                                        <th>Aadhar</th>
                                        <th>PAN</th>
                                        <th>Account Type</th>
                                        <th>Application Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var app in Model)
                                    {
                                        <tr>
                                            <td>@app.ApplicationID</td>
                                            <td>@app.FullName</td>
                                            <td>@app.DateOfBirth.ToString("dd MMM yyyy")</td>
                                            <td>@app.MobileNumber</td>
                                            <td>@app.AadharNumber</td>
                                            <td>@app.PAN</td>
                                            <td>@(app.AccountTypeID == 1 ? "Savings" : "Current")</td>
                                            <td>@app.ApplicationDate.ToString("dd MMM yyyy")</td>
                                            <td>
                                                <button class="btn btn-sm btn-info" onclick="viewApplication(@app.ApplicationID)">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button class="btn btn-sm btn-warning" onclick="editApplication(@app.ApplicationID)">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button class="btn btn-sm btn-success" onclick="approveApplication(@app.ApplicationID)">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                                <button class="btn btn-sm btn-danger" onclick="rejectApplication(@app.ApplicationID)">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No pending applications found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Approval Modal -->
<div class="modal fade" id="approvalModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">Application Approved</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-success">
                    <h5><i class="fas fa-check-circle"></i> Account Created Successfully!</h5>
                </div>
                <p><strong>Username:</strong> <span id="modalUsername"></span></p>
                <p><strong>Password:</strong> <span id="modalPassword"></span></p>
                <p><strong>Full Name:</strong> <span id="modalFullName"></span></p>
                <div class="alert alert-warning">
                    <i class="fas fa-info-circle"></i> Please share these credentials with the customer.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Reject Application</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="rejectApplicationId" />
                <div class="mb-3">
                    <label class="form-label">Rejection Reason *</label>
                    <textarea id="rejectionReason" class="form-control" rows="3" placeholder="Enter reason for rejection"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="confirmReject()">Reject Application</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#applicationsTable').DataTable({
                "pageLength": 25,
                "order": [[7, "desc"]]
            });
        });

        function viewApplication(id) {
            window.location.href = '@Url.Action("Details", "Application")/' + id;
        }

        function editApplication(id) {
            window.location.href = '@Url.Action("Edit", "Application")/' + id;
        }

        function approveApplication(id) {
            if(confirm('Are you sure you want to approve this application?')) {
                $.ajax({
                    url: '@Url.Action("ApproveApplication")/' + id,
                    type: 'POST',
                    success: function(response) {
                        if(response.success) {
                            $('#modalUsername').text(response.userName);
                            $('#modalPassword').text(response.password);
                            $('#modalFullName').text(response.fullName);
                            $('#approvalModal').modal('show');

                            setTimeout(function() {
                                location.reload();
                            }, 5000);
                        } else {
                            toastr.error(response.message);
                        }
                    },
                    error: function() {
                        toastr.error('An error occurred');
                    }
                });
            }
        }

        function rejectApplication(id) {
            $('#rejectApplicationId').val(id);
            $('#rejectModal').modal('show');
        }

        function confirmReject() {
            var id = $('#rejectApplicationId').val();
            var reason = $('#rejectionReason').val();

            if(!reason) {
                toastr.warning('Please enter rejection reason');
                return;
            }

            $.ajax({
                url: '@Url.Action("RejectApplication")/' + id,
                type: 'POST',
                data: { reason: reason },
                success: function(response) {
                    if(response.success) {
                        toastr.success(response.message);
                        $('#rejectModal').modal('hide');
                        setTimeout(function() {
                            location.reload();
                        }, 1500);
                    } else {
                        toastr.error(response.message);
                    }
                },
                error: function() {
                    toastr.error('An error occurred');
                }
            });
        }
    </script>
}
