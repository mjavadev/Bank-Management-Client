@model List<BankApp.Client.Dto.ApplicationDto>

@{
    ViewData["Title"] = "Pending Applications";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-hourglass-half"></i> Pending Applications</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover" id="applicationsTable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Photo</th>
                                        <th>Full Name</th>
                                        <th>DOB</th>
                                        <th>Mobile</th>
                                        <th>Aadhar</th>
                                        <th>PAN</th>
                                        <th>Account Type</th>
                                        <th>Application Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var app in Model)
                                    {
                                        <tr>
                                            <td>@app.ApplicationID</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(app.CustomerImageURL))
                                                {
                                                    <img src="http://localhost:5266/@app.CustomerImageURL"
                                                         alt="Photo"
                                                         class="img-thumbnail rounded-circle"
                                                         style="width: 40px; height: 40px; object-fit: cover; cursor: pointer;"
                                                         onclick="viewApplication(@app.ApplicationID)">
                                                }
                                                else
                                                {
                                                    <i class="fas fa-user-circle fa-2x text-muted"></i>
                                                }
                                            </td>
                                            <td>@app.FullName</td>
                                            <td>@app.DateOfBirth.ToString("dd MMM yyyy")</td>
                                            <td>@app.MobileNumber</td>
                                            <td>@app.AadharNumber</td>
                                            <td>@app.PAN</td>
                                            <td>
                                                @if (app.AccountTypeID == 1)
                                                {
                                                    <span class="badge bg-primary">Savings</span>
                                                }
                                                else if (app.AccountTypeID == 2)
                                                {
                                                    <span class="badge bg-success">Current</span>
                                                }
                                                else if (app.AccountTypeID == 3)
                                                {
                                                    <span class="badge bg-warning text-dark">Fixed Deposit</span>
                                                }
                                            </td>
                                            <td>@app.ApplicationDate.ToString("dd MMM yyyy")</td>
                                            <td>
                                                <button class="btn btn-sm btn-info" onclick="viewApplication(@app.ApplicationID)" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button class="btn btn-sm btn-success" onclick="approveApplication(@app.ApplicationID)" title="Approve">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                                <button class="btn btn-sm btn-danger" onclick="rejectApplication(@app.ApplicationID)" title="Reject">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No pending applications found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ⭐ View Application Details Modal with Enhanced Photo Display -->
<div class="modal fade" id="viewModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title"><i class="fas fa-file-alt"></i> Application Details</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="applicationDetailsBody">
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading application details...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Close
                </button>
                <button type="button" class="btn btn-success" id="approveFromModal" style="display: none;">
                    <i class="fas fa-check"></i> Approve Application
                </button>
                <button type="button" class="btn btn-danger" id="rejectFromModal" style="display: none;">
                    <i class="fas fa-times"></i> Reject Application
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Approval Modal -->
<div class="modal fade" id="approvalModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="fas fa-check-circle"></i> Application Approved</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-success">
                    <h5><i class="fas fa-check-circle"></i> Account Created Successfully!</h5>
                </div>
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-3 text-muted">Login Credentials</h6>
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Username:</dt>
                            <dd class="col-sm-8"><span id="modalUsername" class="badge bg-primary fs-6"></span></dd>

                            <dt class="col-sm-4">Password:</dt>
                            <dd class="col-sm-8"><span id="modalPassword" class="badge bg-secondary fs-6"></span></dd>

                            <dt class="col-sm-4">Full Name:</dt>
                            <dd class="col-sm-8"><strong><span id="modalFullName"></span></strong></dd>
                        </dl>
                    </div>
                </div>
                <div class="alert alert-warning mt-3 mb-0">
                    <i class="fas fa-exclamation-triangle"></i> <strong>Important:</strong> Please share these credentials with the customer securely.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-times-circle"></i> Reject Application</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="rejectApplicationId" />
                <div class="mb-3">
                    <label class="form-label fw-bold">Rejection Reason *</label>
                    <textarea id="rejectionReason" class="form-control" rows="4" placeholder="Enter detailed reason for rejection" required></textarea>
                    <div class="form-text">Provide a clear reason for rejecting this application.</div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="confirmReject()">
                    <i class="fas fa-times"></i> Reject Application
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#applicationsTable').DataTable({
                "pageLength": 25,
                "order": [[8, "desc"]], // Sort by Application Date
                "language": {
                    "search": "Search applications:"
                },
                "columnDefs": [
                    { "orderable": false, "targets": [1, 9] } // Photo and Actions columns not sortable
                ]
            });
        });

        // ⭐ View Application Details in Modal with Photo
        function viewApplication(id) {
            // Show modal with loading state
            $('#viewModal').modal('show');
            $('#applicationDetailsBody').html(`
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading application details...</p>
                </div>
            `);

            // Hide action buttons initially
            $('#approveFromModal').hide();
            $('#rejectFromModal').hide();

            // Fetch application details
            $.ajax({
                url: '@Url.Action("GetApplicationDetails", "Manager")/' + id,
                type: 'GET',
                success: function(response) {
                    if(response.success && response.application) {
                        var app = response.application;

                        // Determine account type
                        var accountTypeBadge = '';
                        if(app.accountTypeID == 1) {
                            accountTypeBadge = '<span class="badge bg-primary fs-6"><i class="fas fa-piggy-bank"></i> Savings Account</span>';
                        } else if(app.accountTypeID == 2) {
                            accountTypeBadge = '<span class="badge bg-success fs-6"><i class="fas fa-briefcase"></i> Current Account</span>';
                        } else if(app.accountTypeID == 3) {
                            accountTypeBadge = '<span class="badge bg-warning text-dark fs-6"><i class="fas fa-lock"></i> Fixed Deposit</span>';
                        }

                        // Photo section
                        var photoSection = '';
                        if(app.customerImageURL) {
                            photoSection = `
                                <div class="col-md-4 text-center">
                                    <div class="card mb-3">
                                        <div class="card-header bg-light">
                                            <h6 class="mb-0"><i class="fas fa-image"></i> Customer Photo</h6>
                                        </div>
                                        <div class="card-body">
                                            <img src="http://localhost:5266/${app.customerImageURL}"
                                                 alt="Customer Photo"
                                                 class="img-fluid rounded shadow"
                                                 style="max-height: 350px; object-fit: cover;">
                                        </div>
                                    </div>
                                </div>
                            `;
                        } else {
                            photoSection = `
                                <div class="col-md-4 text-center">
                                    <div class="card mb-3">
                                        <div class="card-header bg-light">
                                            <h6 class="mb-0"><i class="fas fa-image"></i> Customer Photo</h6>
                                        </div>
                                        <div class="card-body">
                                            <i class="fas fa-user-circle fa-10x text-muted"></i>
                                            <p class="text-muted mt-2">No photo uploaded</p>
                                        </div>
                                    </div>
                                </div>
                            `;
                        }

                        var html = `
                            <div class="row">
                                ${photoSection}

                                <div class="${app.customerImageURL ? 'col-md-8' : 'col-md-12'}">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="card mb-3 border-primary">
                                                <div class="card-header bg-primary text-white">
                                                    <h6 class="mb-0"><i class="fas fa-user"></i> Personal Information</h6>
                                                </div>
                                                <div class="card-body">
                                                    <dl class="row mb-0">
                                                        <dt class="col-sm-5">Application ID:</dt>
                                                        <dd class="col-sm-7"><span class="badge bg-secondary">#${app.applicationID}</span></dd>

                                                        <dt class="col-sm-5">Full Name:</dt>
                                                        <dd class="col-sm-7"><strong class="text-primary">${app.fullName}</strong></dd>

                                                        <dt class="col-sm-5">Date of Birth:</dt>
                                                        <dd class="col-sm-7">${new Date(app.dateOfBirth).toLocaleDateString('en-GB', {day: '2-digit', month: 'short', year: 'numeric'})}</dd>

                                                        <dt class="col-sm-5">Gender:</dt>
                                                        <dd class="col-sm-7">${app.gender}</dd>

                                                        <dt class="col-sm-5">Occupation:</dt>
                                                        <dd class="col-sm-7">${app.occupation || '<em class="text-muted">Not specified</em>'}</dd>
                                                    </dl>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="card mb-3 border-success">
                                                <div class="card-header bg-success text-white">
                                                    <h6 class="mb-0"><i class="fas fa-id-card"></i> Contact & Documents</h6>
                                                </div>
                                                <div class="card-body">
                                                    <dl class="row mb-0">
                                                        <dt class="col-sm-5">Mobile Number:</dt>
                                                        <dd class="col-sm-7"><i class="fas fa-phone text-success"></i> ${app.mobileNumber}</dd>

                                                        <dt class="col-sm-5">Aadhar Number:</dt>
                                                        <dd class="col-sm-7"><code>${app.aadharNumber}</code></dd>

                                                        <dt class="col-sm-5">PAN Number:</dt>
                                                        <dd class="col-sm-7"><code>${app.pan}</code></dd>

                                                        <dt class="col-sm-5">Account Type:</dt>
                                                        <dd class="col-sm-7">${accountTypeBadge}</dd>

                                                        <dt class="col-sm-5">Applied On:</dt>
                                                        <dd class="col-sm-7"><i class="far fa-calendar-alt"></i> ${new Date(app.applicationDate).toLocaleDateString('en-GB', {day: '2-digit', month: 'short', year: 'numeric'})}</dd>
                                                    </dl>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `;

                        $('#applicationDetailsBody').html(html);

                        // Show action buttons and bind events
                        if(app.status == 1) { // Pending
                            $('#approveFromModal').show().off('click').on('click', function() {
                                $('#viewModal').modal('hide');
                                approveApplication(app.applicationID);
                            });

                            $('#rejectFromModal').show().off('click').on('click', function() {
                                $('#viewModal').modal('hide');
                                rejectApplication(app.applicationID);
                            });
                        }
                    } else {
                        $('#applicationDetailsBody').html(`
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-circle"></i> Failed to load application details.
                            </div>
                        `);
                    }
                },
                error: function() {
                    $('#applicationDetailsBody').html(`
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle"></i> An error occurred while loading application details.
                        </div>
                    `);
                }
            });
        }

        function approveApplication(id) {
            if(confirm('Are you sure you want to approve this application? This will create a customer account.')) {
                $.ajax({
                    url: '@Url.Action("ApproveApplication", "Manager")/' + id,
                    type: 'POST',
                    success: function(response) {
                        if(response.success) {
                            $('#modalUsername').text(response.userName);
                            $('#modalPassword').text(response.password);
                            $('#modalFullName').text(response.fullName);
                            $('#approvalModal').modal('show');

                            setTimeout(function() {
                                location.reload();
                            }, 5000);
                        } else {
                            toastr.error(response.message || 'Failed to approve application');
                        }
                    },
                    error: function() {
                        toastr.error('An error occurred while approving the application');
                    }
                });
            }
        }

        function rejectApplication(id) {
            $('#rejectApplicationId').val(id);
            $('#rejectionReason').val('');
            $('#rejectModal').modal('show');
        }

        function confirmReject() {
            var id = $('#rejectApplicationId').val();
            var reason = $('#rejectionReason').val().trim();

            if(!reason) {
                toastr.warning('Please enter rejection reason');
                $('#rejectionReason').focus();
                return;
            }

            $.ajax({
                url: '@Url.Action("RejectApplication", "Manager")/' + id,
                type: 'POST',
                data: JSON.stringify({ reason: reason }),
                contentType: 'application/json',
                success: function(response) {
                    if(response.success) {
                        toastr.success(response.message || 'Application rejected successfully');
                        $('#rejectModal').modal('hide');
                        setTimeout(function() {
                            location.reload();
                        }, 1500);
                    } else {
                        toastr.error(response.message || 'Failed to reject application');
                    }
                },
                error: function() {
                    toastr.error('An error occurred while rejecting the application');
                }
            });
        }
    </script>
}
