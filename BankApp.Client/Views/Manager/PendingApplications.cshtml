<div class="pending-container">
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="page-header">
            <div class="page-header-content">
                <h2>
                    <i class="fas fa-hourglass-half"></i>
                    Pending Applications
                </h2>
                <p class="page-subtitle">Review and approve customer account applications awaiting manager approval</p>
            </div>
            @if (Model.Any())
            {
                <div class="pending-count-badge">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>@Model.Count</span>
                </div>
            }
        </div>

        <!-- Main Pending Card -->
        <div class="row">
            <div class="col-12">
                <div class="pending-card">
                    <div class="pending-card-header">
                        <h5><i class="fas fa-clipboard-list"></i> Applications Awaiting Review</h5>
                    </div>
                    <div class="pending-card-body">
                        @if (Model.Any())
                        {
                            <div class="table-responsive">
                                <table class="applications-table table" id="applicationsTable">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Photo</th>
                                            <th>Full Name</th>
                                            <th>Date of Birth</th>
                                            <th>Mobile</th>
                                            <th>Aadhar</th>
                                            <th>PAN</th>
                                            <th>Account Type</th>
                                            <th>Applied Date</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var app in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="application-id">#@app.ApplicationID</span>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(app.CustomerImageURL))
                                                    {
                                                        <img src="http://localhost:5266/@app.CustomerImageURL"
                                                             alt="@app.FullName"
                                                             class="img-thumbnail rounded-circle customer-photo"
                                                             onclick="viewApplication(@app.ApplicationID)"
                                                             title="Click to view details">
                                                    }
                                                    else
                                                    {
                                                        <i class="fas fa-user-circle photo-placeholder"
                                                           onclick="viewApplication(@app.ApplicationID)"
                                                           title="Click to view details"></i>
                                                    }
                                                </td>
                                                <td><strong>@app.FullName</strong></td>
                                                <td>@app.DateOfBirth.ToString("dd MMM yyyy")</td>
                                                <td>
                                                    <span class="sensitive-data">@app.MobileNumber</span>
                                                </td>
                                                <td>
                                                    <span class="sensitive-data">@app.AadharNumber</span>
                                                </td>
                                                <td>
                                                    <span class="sensitive-data">@app.PAN</span>
                                                </td>
                                                <td>
                                                    @if (app.AccountTypeID == 1)
                                                    {
                                                        <span class="account-type-badge badge-savings">
                                                            <i class="fas fa-piggy-bank"></i> Savings
                                                        </span>
                                                    }
                                                    else if (app.AccountTypeID == 2)
                                                    {
                                                        <span class="account-type-badge badge-current">
                                                            <i class="fas fa-briefcase"></i> Current
                                                        </span>
                                                    }
                                                    else if (app.AccountTypeID == 3)
                                                    {
                                                        <span class="account-type-badge badge-fixed">
                                                            <i class="fas fa-lock"></i> Fixed Deposit
                                                        </span>
                                                    }
                                                </td>
                                                <td>
                                                    <div>@app.ApplicationDate.ToString("dd MMM yyyy")</div>
                                                    <small style="color: #6c757d;">@app.ApplicationDate.ToString("HH:mm")</small>
                                                </td>
                                                <td>
                                                    <div class="action-buttons">
                                                        <button class="btn-action btn-view-action"
                                                                onclick="viewApplication(@app.ApplicationID)"
                                                                title="View Details">
                                                            <i class="fas fa-eye"></i>
                                                        </button>
                                                        <button class="btn-action btn-approve-action"
                                                                onclick="approveApplication(@app.ApplicationID)"
                                                                title="Approve">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                        <button class="btn-action btn-reject-action"
                                                                onclick="rejectApplication(@app.ApplicationID)"
                                                                title="Reject">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <div class="empty-state-icon">
                                    <i class="fas fa-check-double"></i>
                                </div>
                                <h5>All Caught Up!</h5>
                                <p>There are no pending applications at this time. All applications have been processed.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

