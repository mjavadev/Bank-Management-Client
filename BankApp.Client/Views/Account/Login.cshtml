@using BankApp.Client.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Banking Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">
    <style>
        :root {
            --bank-primary: #1e3a5f;
            --bank-secondary: #2c5f8d;
            --bank-accent: #3498db;
            --bank-border: #e1e8ed;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #1e3a5f 0%, #2c5f8d 50%, #3498db 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 15px;
            position: relative;
            overflow: hidden;
        }

            body::before {
                content: '';
                position: absolute;
                width: 100%;
                height: 100%;
                background-image: radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.05) 0%, transparent 50%), radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
                animation: float 20s ease-in-out infinite;
            }

        @@keyframes float {
            0%, 100%

        {
            transform: translateY(0);
        }

        50% {
            transform: translateY(-15px);
        }

        }

        .login-container {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            max-width: 900px;
            gap: 40px;
            position: relative;
            z-index: 1;
        }

        /* Left Side - Branding */
        .branding-section {
            flex: 1;
            color: white;
            display: none;
        }

        .brand-logo {
            width: 80px;
            height: 80px;
            background: rgba(255, 255, 255, 0.15);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 24px;
            backdrop-filter: blur(10px);
        }

            .brand-logo i {
                font-size: 40px;
                color: white;
            }

        .branding-section h1 {
            font-size: 36px;
            font-weight: 700;
            margin-bottom: 12px;
            line-height: 1.2;
        }

        .branding-section p {
            font-size: 16px;
            opacity: 0.9;
            line-height: 1.6;
        }

        .features-list {
            margin-top: 24px;
            list-style: none;
        }

            .features-list li {
                padding: 8px 0;
                display: flex;
                align-items: center;
                gap: 12px;
                font-size: 15px;
            }

            .features-list i {
                color: #4ade80;
                font-size: 18px;
            }

        /* Right Side - Login Card */
        .login-card {
            flex: 1;
            max-width: 420px;
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            padding: 32px 30px;
            animation: slideIn 0.5s ease-out;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        @@keyframes slideIn {
            from

        {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .login-header {
            text-align: center;
            margin-bottom: 24px;
        }

        .login-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, var(--bank-primary) 0%, var(--bank-secondary) 100%);
            border-radius: 15px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 12px;
            box-shadow: 0 8px 20px rgba(30, 58, 95, 0.3);
        }

            .login-icon i {
                color: white;
                font-size: 28px;
            }

        .login-header h2 {
            color: var(--bank-primary);
            font-weight: 700;
            font-size: 22px;
            margin-bottom: 4px;
        }

        .login-header p {
            color: #6b7280;
            font-size: 13px;
        }

        .form-group {
            margin-bottom: 18px;
        }

        .form-label {
            font-weight: 600;
            color: var(--bank-primary);
            font-size: 13px;
            margin-bottom: 6px;
            display: flex;
            align-items: center;
            gap: 6px;
        }

            .form-label i {
                font-size: 12px;
            }

        .input-wrapper {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 14px;
            top: 50%;
            transform: translateY(-50%);
            color: #9ca3af;
            font-size: 15px;
        }

        .form-control {
            width: 100%;
            padding: 11px 14px 11px 42px;
            border: 2px solid var(--bank-border);
            border-radius: 10px;
            font-size: 14px;
            transition: all 0.3s ease;
            background: white;
        }

            .form-control::placeholder {
                color: #9ca3af;
            }

            .form-control:focus {
                outline: none;
                border-color: var(--bank-accent);
                box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
            }

        .password-toggle {
            position: absolute;
            right: 14px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #9ca3af;
            cursor: pointer;
            padding: 4px;
        }

            .password-toggle:hover {
                color: var(--bank-accent);
            }

        .btn-login {
            width: 100%;
            padding: 12px;
            background: linear-gradient(135deg, var(--bank-primary) 0%, var(--bank-secondary) 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 6px 20px rgba(30, 58, 95, 0.3);
            margin-top: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 24px rgba(30, 58, 95, 0.4);
            }

        .divider {
            text-align: center;
            margin: 20px 0 16px;
            position: relative;
        }

            .divider::before {
                content: '';
                position: absolute;
                left: 0;
                top: 50%;
                width: 100%;
                height: 1px;
                background: linear-gradient(90deg, transparent, var(--bank-border), transparent);
            }

            .divider span {
                background: rgba(255, 255, 255, 0.98);
                padding: 0 12px;
                color: #6b7280;
                font-size: 12px;
                position: relative;
            }

        .register-section {
            text-align: center;
            padding: 16px;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border: 2px solid var(--bank-border);
            border-radius: 12px;
        }

            .register-section p {
                color: var(--bank-primary);
                font-size: 13px;
                margin-bottom: 10px;
                font-weight: 600;
            }

        .btn-register {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            color: var(--bank-accent);
            text-decoration: none;
            font-weight: 600;
            font-size: 13px;
            padding: 8px 16px;
            background: white;
            border: 2px solid var(--bank-accent);
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .btn-register:hover {
                background: var(--bank-accent);
                color: white;
                transform: translateY(-1px);
            }

        .text-danger {
            color: #dc2626;
            font-size: 12px;
            margin-top: 4px;
            display: block;
        }

        .validation-summary-errors {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            border: 2px solid #fca5a5;
            border-left: 4px solid #dc2626;
            border-radius: 10px;
            padding: 12px 14px;
            margin-bottom: 16px;
        }

            .validation-summary-errors ul {
                margin: 0;
                padding-left: 20px;
                color: #dc2626;
                font-size: 12px;
            }

        @@media (min-width: 992px) {
            .branding-section

        {
            display: block;
        }

        }

        @@media (max-width: 991px) {
            .login-card

        {
            max-width: 400px;
        }

        }

        @@media (max-height: 700px) {
            .login-card

        {
            padding: 24px 26px;
        }

        .login-icon {
            width: 50px;
            height: 50px;
        }

            .login-icon i {
                font-size: 24px;
            }

        .login-header {
            margin-bottom: 18px;
        }

        .form-group {
            margin-bottom: 14px;
        }

        .register-section {
            padding: 12px;
        }

        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Left Branding Section (Desktop Only) -->
        <div class="branding-section">
            <div class="brand-logo">
                <i class="fas fa-university"></i>
            </div>
            <h1>Welcome to<br>Secure Banking</h1>
            <p>Your trusted partner for all banking needs. Experience seamless and secure banking services.</p>
            <ul class="features-list">
                <li><i class="fas fa-check-circle"></i> 24/7 Account Access</li>
                <li><i class="fas fa-check-circle"></i> Instant Transactions</li>
                <li><i class="fas fa-check-circle"></i> Secure & Encrypted</li>
            </ul>
        </div>

        <!-- Right Login Card -->
        <div class="login-card">
            <div class="login-header">
                <div class="login-icon">
                    <i class="fas fa-lock"></i>
                </div>
                <h2>Login to Account</h2>
                <p>Enter your credentials to continue</p>
            </div>

            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

                <div class="form-group">
                    <label asp-for="UserName" class="form-label">
                        <i class="fas fa-user"></i> Username
                    </label>
                    <div class="input-wrapper">
                        <i class="fas fa-user input-icon"></i>
                        <input asp-for="UserName" class="form-control" placeholder="Enter username" autocomplete="username" />
                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">
                        <i class="fas fa-lock"></i> Password
                    </label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock input-icon"></i>
                        <input asp-for="Password" type="password" class="form-control" id="passwordInput" placeholder="Enter password" autocomplete="current-password" />
                        <button type="button" class="password-toggle" id="togglePassword">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-login">
                    <i class="fas fa-sign-in-alt"></i> Login
                </button>

                <div class="divider">
                    <span>New customer?</span>
                </div>

                <div class="register-section">
                    <p>Open an account in minutes</p>
                    <a href="@Url.Action("Create", "Application")" class="btn-register">
                        <i class="fas fa-user-plus"></i> Apply Now
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#togglePassword').click(function() {
                var passwordInput = $('#passwordInput');
                var icon = $(this).find('i');

                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordInput.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });
        });
    </script>

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            toastr.success('@TempData["SuccessMessage"]');
        </script>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            toastr.error('@TempData["ErrorMessage"]');
        </script>
    }
</body>
</html>
