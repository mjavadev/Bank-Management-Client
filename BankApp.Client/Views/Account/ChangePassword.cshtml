@using BankApp.Client.ViewModels
@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
}

<style>
    :root {
        --bank-primary: #1e3a5f;
        --bank-secondary: #2c5f8d;
        --bank-accent: #3498db;
        --bank-success: #27ae60;
        --bank-warning: #f39c12;
        --bank-danger: #e74c3c;
        --bank-info: #16a085;
        --bank-light: #f8f9fa;
        --bank-border: #e1e8ed;
        --bank-shadow: rgba(30, 58, 95, 0.08);
    }

    .change-password-container {
        background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
        min-height: 100vh;
        padding: 60px 0;
        display: flex;
        align-items: center;
    }

    /* Password Card */
    .password-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(30, 58, 95, 0.12);
        border: 1px solid var(--bank-border);
        overflow: hidden;
        animation: slideUp 0.5s ease-out;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .password-card-header {
        background: linear-gradient(135deg, var(--bank-primary) 0%, var(--bank-secondary) 100%);
        padding: 32px;
        position: relative;
        overflow: hidden;
    }

    .password-card-header::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 200px;
        height: 200px;
        background: rgba(255, 255, 255, 0.08);
        border-radius: 50%;
    }

    .password-card-header h4 {
        margin: 0;
        font-size: 1.75rem;
        font-weight: 700;
        color: white;
        position: relative;
        z-index: 1;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .password-card-header h4 i {
        font-size: 1.5rem;
    }

    .password-card-header p {
        margin: 8px 0 0 0;
        color: rgba(255, 255, 255, 0.9);
        font-size: 0.95rem;
        position: relative;
        z-index: 1;
    }

    .password-card-body {
        padding: 40px;
    }

    /* Security Notice */
    .security-notice {
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
        border-left: 4px solid var(--bank-accent);
        border-radius: 8px;
        padding: 16px 20px;
        margin-bottom: 32px;
        display: flex;
        align-items: flex-start;
        gap: 12px;
    }

    .security-notice i {
        color: var(--bank-accent);
        font-size: 1.3rem;
        margin-top: 2px;
    }

    .security-notice-content {
        flex: 1;
    }

    .security-notice strong {
        color: var(--bank-primary);
        display: block;
        margin-bottom: 4px;
    }

    .security-notice p {
        margin: 0;
        color: #1565c0;
        font-size: 0.9rem;
        line-height: 1.5;
    }

    /* Form Groups */
    .form-group-custom {
        margin-bottom: 28px;
    }

    .form-label {
        font-weight: 600;
        color: var(--bank-primary);
        margin-bottom: 8px;
        font-size: 0.95rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-label i {
        color: var(--bank-accent);
        font-size: 0.9rem;
    }

    /* Password Input Wrapper */
    .password-input-wrapper {
        position: relative;
    }

    .form-control {
        border: 2px solid var(--bank-border);
        border-radius: 8px;
        padding: 12px 50px 12px 16px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background-color: white;
    }

    .form-control:focus {
        border-color: var(--bank-accent);
        box-shadow: 0 0 0 4px rgba(52, 152, 219, 0.1);
        outline: none;
    }

    .form-control:hover:not(:focus) {
        border-color: var(--bank-secondary);
    }

    /* Toggle Password Visibility */
    .toggle-password {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #6c757d;
        cursor: pointer;
        padding: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .toggle-password:hover {
        color: var(--bank-accent);
    }

    .toggle-password i {
        font-size: 1.1rem;
    }

    /* Password Strength Indicator */
    .password-strength {
        margin-top: 8px;
        display: none;
    }

    .password-strength.active {
        display: block;
    }

    .strength-bar {
        height: 4px;
        background: #e9ecef;
        border-radius: 4px;
        overflow: hidden;
        margin-bottom: 8px;
    }

    .strength-bar-fill {
        height: 100%;
        transition: all 0.3s ease;
        border-radius: 4px;
    }

    .strength-weak {
        width: 33%;
        background: var(--bank-danger);
    }

    .strength-medium {
        width: 66%;
        background: var(--bank-warning);
    }

    .strength-strong {
        width: 100%;
        background: var(--bank-success);
    }

    .strength-text {
        font-size: 0.85rem;
        font-weight: 600;
    }

    .strength-text.weak {
        color: var(--bank-danger);
    }

    .strength-text.medium {
        color: var(--bank-warning);
    }

    .strength-text.strong {
        color: var(--bank-success);
    }

    /* Password Requirements */
    .password-requirements {
        background: linear-gradient(135deg, var(--bank-light) 0%, #e9ecef 100%);
        border: 2px solid var(--bank-border);
        border-radius: 8px;
        padding: 16px 20px;
        margin-top: 8px;
    }

    .requirements-title {
        color: var(--bank-primary);
        font-weight: 600;
        font-size: 0.9rem;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .requirements-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .requirements-list li {
        padding: 6px 0;
        color: #6c757d;
        font-size: 0.85rem;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

    .requirements-list li i {
        font-size: 0.75rem;
        width: 16px;
        height: 16px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #e9ecef;
    }

    .requirements-list li.met {
        color: var(--bank-success);
    }

    .requirements-list li.met i {
        background: rgba(39, 174, 96, 0.2);
        color: var(--bank-success);
    }

    /* Validation Messages */
    .text-danger {
        font-size: 0.875rem;
        margin-top: 6px;
        display: block;
        color: var(--bank-danger);
    }

    /* Action Buttons */
    .btn-change-password {
        background: linear-gradient(135deg, var(--bank-primary) 0%, var(--bank-secondary) 100%);
        border: none;
        padding: 14px 32px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(30, 58, 95, 0.25);
        color: white;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        justify-content: center;
    }

    .btn-change-password:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(30, 58, 95, 0.35);
        background: linear-gradient(135deg, var(--bank-secondary) 0%, var(--bank-primary) 100%);
        color: white;
    }

    .btn-cancel {
        background: white;
        border: 2px solid var(--bank-border);
        color: var(--bank-primary);
        padding: 14px 32px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        justify-content: center;
    }

    .btn-cancel:hover {
        background: var(--bank-light);
        border-color: var(--bank-secondary);
        color: var(--bank-secondary);
        text-decoration: none;
    }

    .btn-group-actions {
        display: flex;
        gap: 16px;
        margin-top: 32px;
    }

    .btn-group-actions button,
    .btn-group-actions a {
        flex: 1;
    }

    @@media (max-width: 768px) {
        .password-card-body {
            padding: 24px;
        }

        .btn-group-actions {
            flex-direction: column;
        }

        .password-card-header h4 {
            font-size: 1.5rem;
        }
    }
</style>

<div class="change-password-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="password-card">
                    <div class="password-card-header">
                        <h4><i class="fas fa-shield-alt"></i> Change Password</h4>
                        <p>Update your password to keep your account secure</p>
                    </div>
                    <div class="password-card-body">
                        <div class="security-notice">
                            <i class="fas fa-info-circle"></i>
                            <div class="security-notice-content">
                                <strong>Security Tip</strong>
                                <p>Choose a strong password that you haven't used before. Avoid using personal information.</p>
                            </div>
                        </div>

                        <form asp-action="ChangePassword" method="post" id="changePasswordForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-group-custom">
                                <label asp-for="CurrentPassword" class="form-label">
                                    <i class="fas fa-lock"></i> Current Password
                                </label>
                                <div class="password-input-wrapper">
                                    <input asp-for="CurrentPassword" 
                                           type="password" 
                                           class="form-control" 
                                           id="currentPassword"
                                           placeholder="Enter your current password" />
                                    <button type="button" class="toggle-password" data-target="currentPassword">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group-custom">
                                <label asp-for="NewPassword" class="form-label">
                                    <i class="fas fa-key"></i> New Password
                                </label>
                                <div class="password-input-wrapper">
                                    <input asp-for="NewPassword" 
                                           type="password" 
                                           class="form-control" 
                                           id="newPassword"
                                           placeholder="Enter your new password" />
                                    <button type="button" class="toggle-password" data-target="newPassword">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                                
                                <div class="password-strength" id="passwordStrength">
                                    <div class="strength-bar">
                                        <div class="strength-bar-fill" id="strengthBar"></div>
                                    </div>
                                    <span class="strength-text" id="strengthText"></span>
                                </div>

                                <div class="password-requirements">
                                    <div class="requirements-title">
                                        <i class="fas fa-check-circle"></i> Password must contain:
                                    </div>
                                    <ul class="requirements-list" id="requirementsList">
                                        <li id="req-length"><i class="fas fa-circle"></i> At least 8 characters</li>
                                        <li id="req-uppercase"><i class="fas fa-circle"></i> One uppercase letter</li>
                                        <li id="req-lowercase"><i class="fas fa-circle"></i> One lowercase letter</li>
                                        <li id="req-number"><i class="fas fa-circle"></i> One number</li>
                                        <li id="req-special"><i class="fas fa-circle"></i> One special character</li>
                                    </ul>
                                </div>
                            </div>

                            <div class="form-group-custom">
                                <label asp-for="ConfirmPassword" class="form-label">
                                    <i class="fas fa-check-double"></i> Confirm New Password
                                </label>
                                <div class="password-input-wrapper">
                                    <input asp-for="ConfirmPassword" 
                                           type="password" 
                                           class="form-control" 
                                           id="confirmPassword"
                                           placeholder="Re-enter your new password" />
                                    <button type="button" class="toggle-password" data-target="confirmPassword">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="btn-group-actions">
                                <button type="submit" class="btn-change-password">
                                    <i class="fas fa-save"></i> Update Password
                                </button>
                                <a href="@Url.Action("Dashboard", "Customer")" class="btn-cancel">
                                    <i class="fas fa-times"></i> Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    
    @section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            // Toggle password visibility
            $('.toggle-password').click(function() {
                var targetId = $(this).data('target');
                var input = $('#' + targetId);
                var icon = $(this).find('i');
                
                if (input.attr('type') === 'password') {
                    input.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    input.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Password strength checker
            $('#newPassword').on('input', function() {
                var password = $(this).val();
                
                if (password.length === 0) {
                    $('#passwordStrength').removeClass('active');
                    resetRequirements();
                    return;
                }

                $('#passwordStrength').addClass('active');
                
                // Check requirements
                var hasLength = password.length >= 8;
                var hasUppercase = /[A-Z]/.test(password);
                var hasLowercase = /[a-z]/.test(password);
                var hasNumber = /[0-9]/.test(password);
                var hasSpecial = /[!@@#$%^&*(),.?":{}|<>]/.test(password);
                
                // Update requirement indicators
                updateRequirement('req-length', hasLength);
                updateRequirement('req-uppercase', hasUppercase);
                updateRequirement('req-lowercase', hasLowercase);
                updateRequirement('req-number', hasNumber);
                updateRequirement('req-special', hasSpecial);
                
                // Calculate strength
                var strength = 0;
                if (hasLength) strength++;
                if (hasUppercase) strength++;
                if (hasLowercase) strength++;
                if (hasNumber) strength++;
                if (hasSpecial) strength++;
                
                // Update strength indicator
                var strengthBar = $('#strengthBar');
                var strengthText = $('#strengthText');
                
                strengthBar.removeClass('strength-weak strength-medium strength-strong');
                strengthText.removeClass('weak medium strong');
                
                if (strength <= 2) {
                    strengthBar.addClass('strength-weak');
                    strengthText.addClass('weak').text('Weak password');
                } else if (strength <= 4) {
                    strengthBar.addClass('strength-medium');
                    strengthText.addClass('medium').text('Medium password');
                } else {
                    strengthBar.addClass('strength-strong');
                    strengthText.addClass('strong').text('Strong password');
                }
            });

            function updateRequirement(id, met) {
                var element = $('#' + id);
                if (met) {
                    element.addClass('met');
                } else {
                    element.removeClass('met');
                }
            }

            function resetRequirements() {
                $('#requirementsList li').removeClass('met');
            }
        });
    </script>
}

}
