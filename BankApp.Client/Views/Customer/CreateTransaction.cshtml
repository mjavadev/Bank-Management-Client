@model BankApp.Client.ViewModels.TransactionViewModel

@{
    ViewData["Title"] = "New Transaction";
    var accounts = ViewBag.Accounts as List<BankApp.Client.Dto.AccountDto>;
}

<style>
    :root {
        --bank-primary: #1e3a5f;
        --bank-secondary: #2c5f8d;
        --bank-accent: #3498db;
        --bank-success: #27ae60;
        --bank-warning: #f39c12;
        --bank-danger: #e74c3c;
        --bank-light: #f8f9fa;
        --bank-border: #e1e8ed;
        --bank-shadow: rgba(30, 58, 95, 0.08);
    }

    .transaction-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
        padding: 40px 0;
    }

    .transaction-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 8px 24px var(--bank-shadow);
        border: 1px solid var(--bank-border);
        overflow: hidden;
    }

    .transaction-header {
        background: linear-gradient(135deg, var(--bank-primary) 0%, var(--bank-secondary) 100%);
        padding: 32px;
        position: relative;
        overflow: hidden;
    }

        .transaction-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 200px;
            height: 200px;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 50%;
        }

        .transaction-header h4 {
            margin: 0;
            font-size: 1.75rem;
            font-weight: 600;
            color: white;
            position: relative;
            z-index: 1;
        }

        .transaction-header i {
            margin-right: 12px;
            font-size: 1.5rem;
            vertical-align: middle;
        }

    .transaction-body {
        padding: 40px;
    }

    /* Form Groups */
    .form-group-custom {
        margin-bottom: 28px;
    }

    .form-label {
        font-weight: 600;
        color: var(--bank-primary);
        margin-bottom: 8px;
        font-size: 0.95rem;
        letter-spacing: 0.3px;
        display: flex;
        align-items: center;
    }

    .required-indicator {
        color: #dc3545;
        margin-left: 4px;
    }

    /* Account Selection Card */
    .account-selector {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border: 2px solid var(--bank-border);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 28px;
    }

    .account-selector-title {
        color: var(--bank-primary);
        font-weight: 700;
        font-size: 1.1rem;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .account-selector-title i {
            color: var(--bank-accent);
        }

    .form-select,
    .form-control {
        border: 2px solid var(--bank-border);
        border-radius: 8px;
        padding: 12px 16px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background-color: white;
    }

        .form-select:focus,
        .form-control:focus {
            border-color: var(--bank-accent);
            box-shadow: 0 0 0 4px rgba(52, 152, 219, 0.1);
            outline: none;
        }

        .form-select:hover,
        .form-control:hover {
            border-color: var(--bank-secondary);
        }

    /* Balance Display */
    .balance-display {
        background: linear-gradient(135deg, rgba(52, 152, 219, 0.1) 0%, rgba(52, 152, 219, 0.05) 100%);
        border-left: 4px solid var(--bank-accent);
        border-radius: 8px;
        padding: 16px 20px;
        margin-top: 12px;
        display: none;
        animation: slideDown 0.3s ease-out;
    }

    @@keyframes slideDown {
        from

    {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .balance-display.active {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .balance-display i {
        font-size: 1.5rem;
        color: var(--bank-accent);
    }

    .balance-text {
        flex: 1;
    }

    .balance-label {
        font-size: 0.85rem;
        color: #6c757d;
        margin-bottom: 4px;
    }

    .balance-amount {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--bank-primary);
        font-family: 'Courier New', monospace;
    }

    /* Transaction Type Cards */
    .transaction-types {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 16px;
        margin-top: 12px;
    }

    .transaction-type-card {
        cursor: pointer;
        background: white;
        border: 2px solid var(--bank-border);
        border-radius: 12px;
        padding: 20px 16px;
        text-align: center;
        transition: all 0.3s ease;
    }

        .transaction-type-card:hover {
            border-color: var(--bank-accent);
            transform: translateY(-4px);
            box-shadow: 0 6px 16px rgba(52, 152, 219, 0.15);
        }

        .transaction-type-card.selected {
            border-color: var(--bank-accent);
            background: linear-gradient(135deg, rgba(52, 152, 219, 0.1) 0%, rgba(52, 152, 219, 0.05) 100%);
            box-shadow: 0 6px 16px rgba(52, 152, 219, 0.2);
        }

    .transaction-type-icon {
        width: 60px;
        height: 60px;
        margin: 0 auto 12px;
        background: var(--bank-light);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .transaction-type-card.selected .transaction-type-icon {
        background: linear-gradient(135deg, var(--bank-accent) 0%, var(--bank-secondary) 100%);
    }

    .transaction-type-icon i {
        font-size: 1.8rem;
        transition: all 0.3s ease;
    }

    .icon-deposit {
        color: var(--bank-success);
    }

    .icon-withdrawal {
        color: var(--bank-warning);
    }

    .icon-transfer {
        color: var(--bank-accent);
    }

    .transaction-type-card.selected .transaction-type-icon i {
        color: white;
    }

    .transaction-type-label {
        color: var(--bank-primary);
        font-weight: 600;
        font-size: 0.95rem;
    }

    /* Recipient Section */
    .recipient-section {
        background: linear-gradient(135deg, rgba(52, 152, 219, 0.05) 0%, rgba(52, 152, 219, 0.02) 100%);
        border: 2px dashed var(--bank-accent);
        border-radius: 12px;
        padding: 24px;
        margin-bottom: 28px;
        animation: slideDown 0.3s ease-out;
    }

    .recipient-section-title {
        color: var(--bank-primary);
        font-weight: 600;
        font-size: 1rem;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .recipient-section-title i {
            color: var(--bank-accent);
        }

    /* Amount Input Enhancement */
    .amount-input-wrapper {
        position: relative;
    }

    .currency-symbol {
        position: absolute;
        left: 16px;
        top: 50%;
        transform: translateY(-50%);
        font-weight: 700;
        color: var(--bank-primary);
        font-size: 1.2rem;
    }

    .amount-input-wrapper .form-control {
        padding-left: 40px;
        font-size: 1.1rem;
        font-weight: 600;
        font-family: 'Courier New', monospace;
    }

    /* Validation Helper */
    .validation-helper {
        font-size: 0.875rem;
        color: #6c757d;
        margin-top: 6px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

        .validation-helper i {
            font-size: 0.75rem;
        }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 4px;
        display: block;
    }

    /* Description Field */
    textarea.form-control {
        resize: vertical;
        min-height: 100px;
    }

    /* Action Buttons */
    .btn-submit {
        background: linear-gradient(135deg, var(--bank-primary) 0%, var(--bank-secondary) 100%);
        border: none;
        padding: 14px 32px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(30, 58, 95, 0.25);
        color: white;
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(30, 58, 95, 0.35);
            background: linear-gradient(135deg, var(--bank-secondary) 0%, var(--bank-primary) 100%);
            color: white;
        }

    .btn-back {
        background: white;
        border: 2px solid var(--bank-border);
        color: var(--bank-primary);
        padding: 14px 32px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-back:hover {
            background: var(--bank-light);
            border-color: var(--bank-secondary);
            color: var(--bank-secondary);
            text-decoration: none;
        }

    .btn-group-actions {
        display: flex;
        gap: 16px;
        margin-top: 32px;
    }

        .btn-group-actions button,
        .btn-group-actions a {
            flex: 1;
            text-align: center;
        }

    @@media (max-width: 768px) {
        .transaction-body

    {
        padding: 24px;
    }

    .transaction-types {
        grid-template-columns: 1fr;
    }

    .btn-group-actions {
        flex-direction: column;
    }

    }
</style>

<div class="transaction-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9 col-md-10">
                <div class="transaction-card">
                    <div class="transaction-header">
                        <h4><i class="fas fa-exchange-alt"></i> New Transaction</h4>
                    </div>
                    <div class="transaction-body">
                        <form asp-action="CreateTransaction" method="post" id="transactionForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <!-- Account Selection -->
                            <div class="account-selector">
                                <div class="account-selector-title">
                                    <i class="fas fa-wallet"></i>
                                    From Account
                                </div>
                                <div class="form-group-custom">
                                    <label asp-for="AccountID" class="form-label">
                                        Select Account<span class="required-indicator">*</span>
                                    </label>
                                    <select asp-for="AccountID" class="form-select" id="accountSelect" required>
                                        <option value="">-- Select Account --</option>
                                        @if (accounts != null)
                                        {
                                            @foreach (var account in accounts)
                                            {
                                                <option value="@account.AccountID" data-balance="@account.Balance" data-number="@account.AccountNumber">
                                                    @account.AccountTypeName - @account.AccountNumber (Balance: ₹@account.Balance.ToString("N2"))
                                                </option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="AccountID" class="text-danger"></span>
                                </div>

                                <div class="balance-display" id="balanceDisplay">
                                    <i class="fas fa-wallet"></i>
                                    <div class="balance-text">
                                        <div class="balance-label">Available Balance</div>
                                        <div class="balance-amount" id="balanceAmount">₹0.00</div>
                                    </div>
                                </div>
                            </div>

                            <input type="hidden" asp-for="AccountNumber" id="accountNumber" />
                            <input type="hidden" asp-for="CurrentBalance" id="currentBalance" />

                            <!-- Transaction Type -->
                            <div class="form-group-custom">
                                <label class="form-label">
                                    Transaction Type<span class="required-indicator">*</span>
                                </label>
                                <select asp-for="TransactionType" class="form-select d-none" id="transactionType" required>
                                    <option value="">-- Select Type --</option>
                                    <option value="1">Deposit</option>
                                    <option value="2">Withdrawal</option>
                                    <option value="3">Transfer</option>
                                </select>

                                <div class="transaction-types">
                                    <div class="transaction-type-card" data-type="1">
                                        <div class="transaction-type-icon">
                                            <i class="fas fa-plus-circle icon-deposit"></i>
                                        </div>
                                        <div class="transaction-type-label">Deposit</div>
                                    </div>
                                    <div class="transaction-type-card" data-type="2">
                                        <div class="transaction-type-icon">
                                            <i class="fas fa-minus-circle icon-withdrawal"></i>
                                        </div>
                                        <div class="transaction-type-label">Withdrawal</div>
                                    </div>
                                    <div class="transaction-type-card" data-type="3">
                                        <div class="transaction-type-icon">
                                            <i class="fas fa-exchange-alt icon-transfer"></i>
                                        </div>
                                        <div class="transaction-type-label">Transfer</div>
                                    </div>
                                </div>
                                <span asp-validation-for="TransactionType" class="text-danger"></span>
                            </div>

                            <!-- Recipient Section (for transfers) -->
                            <div class="recipient-section" id="recipientSection" style="display:none;">
                                <div class="recipient-section-title">
                                    <i class="fas fa-user-circle"></i>
                                    Transfer Recipient
                                </div>
                                <label asp-for="RecipientAccountNumber" class="form-label">
                                    Recipient Account Number<span class="required-indicator">*</span>
                                </label>
                                <input asp-for="RecipientAccountNumber" class="form-control" id="recipientAccountNumber" placeholder="Enter recipient account number" />
                                <span asp-validation-for="RecipientAccountNumber" class="text-danger"></span>
                                <div class="validation-helper">
                                    <i class="fas fa-info-circle"></i>
                                    <span>Enter the complete account number of the recipient</span>
                                </div>
                            </div>

                            <!-- Amount -->
                            <div class="form-group-custom">
                                <label asp-for="Amount" class="form-label">
                                    Amount<span class="required-indicator">*</span>
                                </label>
                                <div class="amount-input-wrapper">
                                    <span class="currency-symbol">₹</span>
                                    <input asp-for="Amount" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                </div>
                                <span asp-validation-for="Amount" class="text-danger"></span>
                                <div class="validation-helper">
                                    <i class="fas fa-info-circle"></i>
                                    <span>Enter amount greater than zero</span>
                                </div>
                            </div>

                            <!-- Description -->
                            <div class="form-group-custom">
                                <label asp-for="Description" class="form-label">
                                    Description (Optional)
                                </label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Add a note about this transaction (optional)"></textarea>
                            </div>

                            <!-- Action Buttons -->
                            <div class="btn-group-actions">
                                <button type="submit" class="btn btn-submit">
                                    <i class="fas fa-paper-plane"></i> Submit Transaction
                                </button>
                                <a href="@Url.Action("Dashboard")" class="btn btn-back">
                                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Handle account selection
            $('#accountSelect').change(function() {
                var selectedOption = $(this).find('option:selected');
                var accountNumber = selectedOption.data('number');
                var balance = selectedOption.data('balance');

                $('#accountNumber').val(accountNumber);
                $('#currentBalance').val(balance);

                if(balance !== undefined) {
                    $('#balanceAmount').text('₹' + parseFloat(balance).toLocaleString('en-IN', {minimumFractionDigits: 2, maximumFractionDigits: 2}));
                    $('#balanceDisplay').addClass('active');
                } else {
                    $('#balanceDisplay').removeClass('active');
                }
            });

            // Handle transaction type selection with cards
            $('.transaction-type-card').click(function() {
                var transactionType = $(this).data('type');

                $('.transaction-type-card').removeClass('selected');
                $(this).addClass('selected');

                $('#transactionType').val(transactionType).trigger('change');
            });

            // Show/hide recipient field based on transaction type
            $('#transactionType').change(function() {
                var transactionType = $(this).val();

                if(transactionType == '3') { // Transfer
                    $('#recipientSection').slideDown(300);
                    $('#recipientAccountNumber').attr('required', true);
                } else {
                    $('#recipientSection').slideUp(300);
                    $('#recipientAccountNumber').attr('required', false);
                    $('#recipientAccountNumber').val('');
                }
            });

            // Form validation before submit
            $('#transactionForm').submit(function(e) {
                var transactionType = $('#transactionType').val();
                var amount = parseFloat($('#Amount').val());
                var balance = parseFloat($('#currentBalance').val());
                var recipientAccount = $('#recipientAccountNumber').val();

                // Validate transaction type is selected
                if(!transactionType) {
                    e.preventDefault();
                    toastr.error('Please select a transaction type');
                    return false;
                }

                // Validate transfer has recipient
                if(transactionType == '3' && !recipientAccount) {
                    e.preventDefault();
                    toastr.error('Please enter recipient account number for transfer');
                    return false;
                }

                // Validate withdrawal/transfer doesn't exceed balance
                if((transactionType == '2' || transactionType == '3') && amount > balance) {
                    e.preventDefault();
                    toastr.error('Insufficient balance. Available: ₹' + balance.toFixed(2));
                    return false;
                }

                // Validate amount is positive
                if(amount <= 0 || isNaN(amount)) {
                    e.preventDefault();
                    toastr.error('Amount must be greater than zero');
                    return false;
                }

                return true;
            });
        });
    </script>
}
