@model BankApp.Client.ViewModels.CreateAccountViewModel

@{
    ViewData["Title"] = "Create New Account";
}

<style>
    :root {
        --bank-primary: #1e3a5f;
        --bank-secondary: #2c5f8d;
        --bank-accent: #3498db;
        --bank-success: #27ae60;
        --bank-success-dark: #229954;
        --bank-light: #f8f9fa;
        --bank-border: #e1e8ed;
        --bank-shadow: rgba(30, 58, 95, 0.08);
    }

    .create-account-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #f5f7fa 0%, #e9ecef 100%);
        padding: 40px 0;
    }

    .create-account-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 8px 24px var(--bank-shadow);
        border: 1px solid var(--bank-border);
        overflow: hidden;
    }

    .create-account-header {
        background: linear-gradient(135deg, var(--bank-success) 0%, var(--bank-success-dark) 100%);
        padding: 32px;
        position: relative;
        overflow: hidden;
    }

        .create-account-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 200px;
            height: 200px;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 50%;
        }

        .create-account-header h4 {
            margin: 0;
            font-size: 1.75rem;
            font-weight: 600;
            color: white;
            position: relative;
            z-index: 1;
        }

        .create-account-header i {
            margin-right: 12px;
            font-size: 1.5rem;
            vertical-align: middle;
        }

    .create-account-body {
        padding: 40px;
    }

    /* Information Banner */
    .info-banner {
        background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
        border-left: 4px solid var(--bank-accent);
        border-radius: 8px;
        padding: 20px 24px;
        margin-bottom: 32px;
        display: flex;
        align-items: flex-start;
        gap: 16px;
    }

    .info-banner-icon {
        width: 40px;
        height: 40px;
        background: var(--bank-accent);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
        flex-shrink: 0;
    }

    .info-banner-content {
        flex: 1;
    }

        .info-banner-content strong {
            color: var(--bank-primary);
            display: block;
            margin-bottom: 4px;
        }

        .info-banner-content p {
            margin: 0;
            color: #1565c0;
            line-height: 1.6;
        }

    /* Section Title */
    .section-title {
        color: var(--bank-primary);
        font-weight: 700;
        font-size: 1.3rem;
        margin-bottom: 24px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .section-title i {
            color: var(--bank-success);
        }

    /* Account Type Cards */
    .account-type-wrapper {
        cursor: pointer;
        display: block;
        height: 100%;
        margin-bottom: 24px;
    }

    .account-type-card {
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        border: 3px solid var(--bank-border);
        border-radius: 16px;
        height: 100%;
        position: relative;
        overflow: hidden;
        background: white;
    }

        .account-type-card::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(39, 174, 96, 0.05) 0%, transparent 70%);
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .account-type-card:hover {
            border-color: var(--bank-accent);
            box-shadow: 0 8px 24px rgba(52, 152, 219, 0.2);
            transform: translateY(-8px);
        }

            .account-type-card:hover::before {
                opacity: 1;
            }

    /* Selected State */
    .form-check-input:checked ~ .account-type-card,
    .account-type-wrapper:has(input:checked) .account-type-card {
        border-color: var(--bank-success);
        background: linear-gradient(135deg, #f0f9f4 0%, #e8f5e9 100%);
        box-shadow: 0 8px 24px rgba(39, 174, 96, 0.3);
        transform: translateY(-4px);
    }

        .form-check-input:checked ~ .account-type-card::before,
        .account-type-wrapper:has(input:checked) .account-type-card::before {
            opacity: 1;
        }

    /* Card Body */
    .account-type-card .card-body {
        padding: 32px 24px;
        position: relative;
        z-index: 1;
    }

    /* Icon Container */
    .icon-container {
        width: 100px;
        height: 100px;
        margin: 0 auto 20px;
        background: linear-gradient(135deg, var(--bank-light) 0%, #e9ecef 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.4s ease;
        position: relative;
    }

    .account-type-card:hover .icon-container {
        transform: scale(1.1) rotate(5deg);
    }

    .form-check-input:checked ~ .account-type-card .icon-container,
    .account-type-wrapper:has(input:checked) .icon-container {
        background: linear-gradient(135deg, var(--bank-success) 0%, var(--bank-success-dark) 100%);
        box-shadow: 0 8px 16px rgba(39, 174, 96, 0.3);
    }

    .icon-container i {
        font-size: 3rem;
        transition: all 0.4s ease;
    }

    .icon-savings {
        color: #2196f3;
    }

    .icon-current {
        color: #27ae60;
    }

    .icon-fixed {
        color: #f39c12;
    }

    .form-check-input:checked ~ .account-type-card .icon-container i,
    .account-type-wrapper:has(input:checked) .icon-container i {
        color: white;
    }

    /* Card Title */
    .account-type-card .card-title {
        color: var(--bank-primary);
        font-weight: 700;
        font-size: 1.25rem;
        margin-bottom: 12px;
    }

    /* Card Description */
    .account-description {
        color: #6c757d;
        font-size: 0.9rem;
        line-height: 1.5;
        margin-bottom: 20px;
        min-height: 45px;
    }

    /* Features List */
    .features-list {
        list-style: none;
        padding: 0;
        margin: 0 0 20px 0;
        text-align: left;
    }

        .features-list li {
            padding: 8px 0;
            color: var(--bank-primary);
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .features-list i {
            width: 20px;
            height: 20px;
            background: rgba(39, 174, 96, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.7rem;
            color: var(--bank-success);
            flex-shrink: 0;
        }

    /* Selection Badge */
    .selection-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 20px;
        background: var(--bank-accent);
        color: white;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.4s ease;
    }

    .form-check-input:checked ~ .account-type-card .selection-badge,
    .account-type-wrapper:has(input:checked) .selection-badge {
        background: var(--bank-success);
        transform: scale(1.05);
    }

        .form-check-input:checked ~ .account-type-card .selection-badge::after,
        .account-type-wrapper:has(input:checked) .selection-badge::after {
            content: 'ed';
        }

    .selection-badge i {
        font-size: 1rem;
    }

    /* No Available Types Warning */
    .no-types-warning {
        background: linear-gradient(135deg, #fff8e1 0%, #ffecb3 100%);
        border-left: 4px solid #f39c12;
        border-radius: 8px;
        padding: 24px 28px;
        text-align: center;
    }

        .no-types-warning i {
            font-size: 3rem;
            color: #f39c12;
            margin-bottom: 16px;
            display: block;
        }

        .no-types-warning p {
            margin: 0;
            color: #bf360c;
            font-size: 1rem;
            font-weight: 500;
        }

    /* Action Buttons */
    .btn-create {
        background: linear-gradient(135deg, var(--bank-success) 0%, var(--bank-success-dark) 100%);
        border: none;
        padding: 14px 32px;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(39, 174, 96, 0.25);
        color: white;
    }

        .btn-create:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(39, 174, 96, 0.35);
            background: linear-gradient(135deg, var(--bank-success-dark) 0%, var(--bank-success) 100%);
            color: white;
        }

        .btn-create:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

    .btn-back {
        background: white;
        border: 2px solid var(--bank-border);
        color: var(--bank-primary);
        padding: 14px 32px;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-back:hover {
            background: var(--bank-light);
            border-color: var(--bank-secondary);
            color: var(--bank-secondary);
            text-decoration: none;
        }

    .btn-group-actions {
        display: flex;
        gap: 16px;
        margin-top: 32px;
    }

        .btn-group-actions button,
        .btn-group-actions a {
            flex: 1;
            text-align: center;
        }

    @@media (max-width: 768px) {
        .create-account-body

    {
        padding: 24px;
    }

    .icon-container {
        width: 80px;
        height: 80px;
    }

        .icon-container i {
            font-size: 2.5rem;
        }

    .btn-group-actions {
        flex-direction: column;
    }

    }
</style>

<div class="create-account-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-11 col-md-12">
                <div class="create-account-card">
                    <div class="create-account-header">
                        <h4><i class="fas fa-plus-circle"></i> Create New Account</h4>
                    </div>
                    <div class="create-account-body">
                        <form asp-action="CreateAccount" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <input type="hidden" asp-for="CustomerID" />

                            <div class="info-banner">
                                <div class="info-banner-icon">
                                    <i class="fas fa-info-circle"></i>
                                </div>
                                <div class="info-banner-content">
                                    <strong>Important Information</strong>
                                    <p>You can create one account per type. We offer three types: Savings, Current, and Fixed Deposit accounts. Select the account type that best fits your financial needs.</p>
                                </div>
                            </div>

                            <div class="section-title">
                                <i class="fas fa-hand-pointer"></i>
                                Select Account Type
                            </div>

                            @if (Model.AvailableAccountTypes != null && Model.AvailableAccountTypes.Any())
                            {
                                <div class="row">
                                    @foreach (var accountType in Model.AvailableAccountTypes)
                                    {
                                        <div class="col-lg-4 col-md-6">
                                            <label class="account-type-wrapper" for="accountType@(accountType.AccountTypeID)">
                                                <input class="form-check-input d-none" type="radio"
                                                       asp-for="AccountTypeID"
                                                       value="@accountType.AccountTypeID"
                                                       id="accountType@(accountType.AccountTypeID)">

                                                <div class="card account-type-card">
                                                    <div class="card-body text-center">
                                                        @if (accountType.AccountTypeID == 1)
                                                        {
                                                            <div class="icon-container">
                                                                <i class="fas fa-piggy-bank icon-savings"></i>
                                                            </div>
                                                            <h5 class="card-title">Savings Account</h5>
                                                            <p class="account-description">
                                                                Ideal for personal savings with interest benefits. Minimum balance: ₹1,000
                                                            </p>
                                                            <ul class="features-list">
                                                                <li><i class="fas fa-check"></i> <span>Interest rate: 4% p.a.</span></li>
                                                                <li><i class="fas fa-check"></i> <span>Free ATM withdrawals</span></li>
                                                                <li><i class="fas fa-check"></i> <span>Online banking access</span></li>
                                                            </ul>
                                                        }
                                                        else if (accountType.AccountTypeID == 2)
                                                        {
                                                            <div class="icon-container">
                                                                <i class="fas fa-briefcase icon-current"></i>
                                                            </div>
                                                            <h5 class="card-title">Current Account</h5>
                                                            <p class="account-description">
                                                                Perfect for business transactions with unlimited deposits/withdrawals
                                                            </p>
                                                            <ul class="features-list">
                                                                <li><i class="fas fa-check"></i> <span>No transaction limits</span></li>
                                                                <li><i class="fas fa-check"></i> <span>Overdraft facility available</span></li>
                                                                <li><i class="fas fa-check"></i> <span>Business tools & reports</span></li>
                                                            </ul>
                                                        }
                                                        else if (accountType.AccountTypeID == 3)
                                                        {
                                                            <div class="icon-container">
                                                                <i class="fas fa-lock icon-fixed"></i>
                                                            </div>
                                                            <h5 class="card-title">Fixed Deposit</h5>
                                                            <p class="account-description">
                                                                Fixed deposit with locked-in interest rates for guaranteed returns
                                                            </p>
                                                            <ul class="features-list">
                                                                <li><i class="fas fa-check"></i> <span>Interest rate: 6.5% p.a.</span></li>
                                                                <li><i class="fas fa-check"></i> <span>Fixed tenure options</span></li>
                                                                <li><i class="fas fa-check"></i> <span>Tax benefits available</span></li>
                                                            </ul>
                                                        }

                                                        <div class="mt-3">
                                                            <span class="selection-badge">
                                                                <i class="fas fa-mouse-pointer"></i>
                                                                Select
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </label>
                                        </div>
                                    }
                                </div>
                                <span asp-validation-for="AccountTypeID" class="text-danger"></span>
                            }
                            else
                            {
                                <div class="no-types-warning">
                                    <i class="fas fa-check-double"></i>
                                    <p>You already have all available account types (Savings, Current, and Fixed Deposit).</p>
                                </div>
                            }

                            <div class="btn-group-actions">
                                <button type="submit" class="btn btn-create" @(Model.AvailableAccountTypes == null || !Model.AvailableAccountTypes.Any() ? "disabled" : "")>
                                    <i class="fas fa-check-circle"></i> Create Account
                                </button>
                                <a href="@Url.Action("Dashboard")" class="btn btn-back">
                                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            // Make entire card clickable
            $('.account-type-wrapper').click(function(e) {
                if (e.target.tagName !== 'INPUT') {
                    $(this).find('input[type="radio"]').prop('checked', true).trigger('change');
                }
            });

            // Update UI on radio change
            $('input[type="radio"][name="AccountTypeID"]').change(function() {
                $('.account-type-card').removeClass('selected');
                if($(this).is(':checked')) {
                    $(this).closest('.account-type-wrapper').find('.account-type-card')
                        .addClass('selected');
                }
            });

            // Highlight pre-selected card on page load
            $('input[type="radio"]:checked').trigger('change');
        });
    </script>
}
